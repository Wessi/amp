<center>
	<table width="740" class="admin">
		<% if @country_strategies.blank? then %>
			<tr><td colspan=6 class="title"><%= lc(:empty) %></td></tr>
		<% else %>		
			<tr>
				<td colspan=6 class="title">
					<%= lc(:title) %>
				</td>
			</tr>
			<tr>
				<td class="sub_title">Donor</td>
				<td colspan=5><%= current_donor.name %></td>
			</tr>
			<tr>
				<td class="sub_title">Country Strategy Number/Name</td>
				<td class="sub_title">Country Strategy Description</td>
				<td class="sub_title">Start Date</td>
				<td class="sub_title">End Date</td>
				<td class="sub_title">Total Amount Foreseen</td>
				<td class="sub_title">&nbsp;</td>
			</tr>

			<% for strategy in @country_strategies %> 
				<tr>
					<td valign="top"><%= strategy.strategy_number %></td>
					<td valign="top" class="field_justify"><%= expander_tag(strategy.description) %></td>
					<td valign="top"><%= strategy.start %></td>
					<td valign="top"><%= strategy.end %></td>
					<td valign="top"><%= null_to_na(strategy.total_amount_foreseen) %></td>
					<td valign="top"><%= link_to ll(:actions, :edit), edit_country_strategy_path(strategy) %> <%= link_to ll(:actions, :show), country_strategy_path(strategy) %></td>
				</tr>
			<% end %>
		<% end %>
	</table>
<p><b><%= link_to lc(:new), new_country_strategy_path %></b></p>
</center>
