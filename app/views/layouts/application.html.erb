<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html>
	<head>
	  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
	  <title><%= render_page_title %></title>
	
	  <%= javascript_include_tag(:defaults, 'swfobject', 'jtip', 'jquery_expander', 'jquery_template', 'behavior/menu', :cache => false) %>
	  <%= stylesheet_link_tag('scaffold', 'odadata_menu', 'odadata', 'jtip', :media => :all, :cache => false) %>
	  <%# stylesheet_link_tag('print', :media => :print) %>
	  <!--[if lte IE 6]><%= stylesheet_link_tag 'iefixes' -%><![endif]-->
	  <!--[if lt IE 7]><%= javascript_include_tag 'ie6pngfix' %><![endif]-->
	  <%= yield :head %>
	</head>
	
	<body id="body" class="<%= current_user.andand.layout || 'public' %>">
		<%= render_user_navigation %>
		
		<div id="content">
			<%= flash_messages %>
			<%= yield :header %>
			<%= yield  %>
		</div>
	
		<%= render :partial => 'shared/footer' %>
	</body>
</html>
