<!-- START Flash Objects -->

<div style="height:80px;">
	<div style="float:left;height:inherit;width:500px;text-align:left;padding:6px 6px 6px 6px;">
		<img src="/images/ODAnicLogo.gif" alt="ODAnic" width="236" height="80" border="0" style="float:left" />
        <p style="color:#1c4683;font-weight:bold;">Official Development Assistance <br/> to Nicaragua Database</p>
	</div>
    
	<!-- START User Info Bar -->
	<div style="float:right;height:inherit;width:370px; text-align:right; vertical-align:middle;padding-right:10px;">
		<p style="color:#1c4683;font-weight:bold;"><%= current_user.name %></p>
		<p style="color:#1c4683;font-weight:bold;">
			<%= image_tag current_donor.flag.url(:avatar), :align => "midddle", :hspace => 8, :style => "float: left" %>
			<%= current_donor.name %>
		</p>
	</div>
	<!-- END User Info Bar -->
</div>

<!-- END Flash Objects -->


<div style="float:left;width:900px;">
<!-- START Navigation-->
	<ul id="mainMenu">
		<li>
			<div><%= link_to ll(:navigation, :focal_point, :bluebook), bluebook_root_path, 
						:popup => ['Contents', 'height=600,width=800,scrollbars=yes' ] %></div>
		</li>

		<li>
			<span><%= ll(:navigation, :focal_point, :projects) %></span>
	        <img src="/images/menuarrow.gif" width="7" height="4" border="0" align="absmiddle"/>
			<ul>
				<li><%= link_to ll(:navigation, :focal_point, :new_project), new_project_path %></li>
				<li><%= link_to ll(:navigation, :focal_point, :draft_projects), projects_path(:status => Project::DRAFT) %></li>
				<li><%= link_to ll(:navigation, :focal_point, :published_projects), projects_path(:status => Project::PUBLISHED) %></li>
				<li><%= link_to ll(:navigation, :focal_point, :deleted_projects), projects_path(:status => Project::DELETED) %></li>
			</ul>
		</li>

		<li>
			<div><%= link_to ll(:navigation, :focal_point, :design_own), 
						:controller => "reports", :action => "custom" %></div>
		</li>

		<li>
			<span>Reports on</span>
	        <img src="/images/menuarrow.gif" width="7" height="4" border="0" align="absmiddle"/>
			<ul>
				<li><%= link_to 'Drafts', { :controller => "reports", :action => "project_list", :query => "draft", :value => current_donor.id }, :popup => ['_blank', 'scrollbars=yes' ] %></li>
				<li><%= link_to 'Published', { :controller => "reports", :action => "project_list", :query => "donor", :value => current_donor.id }, :popup => ['_blank', 'scrollbars=yes' ] %></li>
			</ul>
		</li>

		<li>
			<span><%= ll(:navigation, :focal_point, :donor_info) %></span>
	        <img src="/images/menuarrow.gif" width="7" height="4" border="0" align="absmiddle"/>
			<ul>
				<li><%= link_to ll(:navigation, :focal_point, :donor_details), edit_donor_details_path(current_donor) %></li>
				<li><%= link_to ll(:navigation, :focal_point, :strategy), country_strategies_path %></li>
				<li><%= link_to ll(:navigation, :focal_point, :financial_consistency), consistency_path %></li>
				<li><%= link_to ll(:navigation, :focal_point, :exchange_rates), exchange_rates_path %></li>
				<li><%= link_to ll(:navigation, :focal_point, :accounts), users_path %></li>
			</ul>
		</li>

		<li>
			<span><%= ll(:navigation, :focal_point, :manuals) %></span>
	        <img src="/images/menuarrow.gif" width="7" height="4" border="0" align="absmiddle"/>
			<ul>
				<li><a href="/manuals/odanic_data_entry.pdf"><%= ll(:navigation, :focal_point, :data_input_manual) %></a></li>
				<li><a href="/manuals/odanic_data_entry_glossary.pdf" onclick="window.open(this.href,'ODAnic Glossary','height=500,width=800,scrollbars=yes,resizable=yes');return false;"><%= ll(:navigation, :focal_point, :data_input_glossary) %></a></li>
				<li><a href="/manuals/dac_crs_manual.pdf"><%= ll(:navigation, :focal_point, :dac_crs_manual) %></a></li>
				<li><a href="/manuals/odanic_manual_10.pdf"><%= ll(:navigation, :focal_point, :country_manual) %></a></li>
			</ul>
		</li>

		<li>
			<div><a href="http://odadata.updatelog.com" target="_blank"><%= ll(:navigation, :focal_point, :contact) %></a></div>
		</li>

		<li>
			<span><%= ll(:navigation, :language) %></span>
	        <img src="/images/menuarrow.gif" width="7" height="4" border="0" align="absmiddle"/>
	        <ul>
				<%= render :partial => "layouts/header/language_select" %>
	        </ul>
		</li>

		<li>
			<div><a href="/logout"><%= ll(:navigation, :logout) %></a></div>
		</li>
	</ul>
<!-- END Navigation -->
</div>

<!-- START News section -->
<div style="text-align:center;padding:2px;">
	<marquee DIRECTION="LEFT" BEHAVIOR="SCROLL" SCROLLAMOUNT="7" SCROLLDELAY="200" TRUESPEED height="20" width="700">
		<%= Prefs.scroll_bar_admin %>
	</marquee>
</div>
