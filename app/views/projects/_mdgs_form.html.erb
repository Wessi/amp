<% labeled_form_for @project do |f| %>
	<% Mdg.ordered.all(:include => :targets).each do |mdg| %>
		<% f.field_set ll(:mdg, :verbose_caption, :number => mdg.id, :name => mdg.name) do %>
			<% mdg.targets.ordered.each do |t| %>
				<%= f.habtm_check_box :target_ids, { :label => t.name }, t.id %>
			<% end %>
		<% end %>
	<% end %>
	
	<%= render :partial => "control_buttons" %>
<% end %>