<% odaform_for @project do |f| %>
	<table>
		<% Time.now.year.upto(Time.now.year+Project::FORECAST_RANGE) do |y| %>
			<%= f.title lc(:forecasts_title, :year => y) %>
			<% f.fields_for_associated @project.funding_forecasts.find_or_initialize_by_year(y) do |fa| -%>
				<%= fa.hidden_field :year, y %>
				<%= fa.text_field :commitments, :value => fa.object.commitments %>
				<%= fa.text_field :payments, :value => fa.object.payments %>
			
				<%= fa.select :on_budget, Project::ON_OFF_BUDGET_OPTIONS %>
				<%= fa.select :on_treasury, Project::ON_OFF_TREASURY_OPTIONS %>
			<% end %>
		<% end %>
		
		<%= render :partial => "control_buttons" %>
	</table>
<% end %>