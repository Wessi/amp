<center>
	<table width="740" class="list">
		<tr><td class="title" colspan=4><%= lc(:title) %></td></tr>
		<tr>
			<td class="sub_title"><%= ll(:glossary, :model) %></td>
			<td class="sub_title"><%= ll(:glossary, :method) %></td>
			<td class="sub_title"><%= ll(:glossary, :locale) %></td>
			<td class="sub_title"></td>
		</tr>
		
		<% @glossaries.each do |glossary| %>
			<tr>
				<td><%= glossary.model %></td>
				<td><%= glossary.method %></td>	
				<td><%= glossary.locale %></td>
				<td><%= link_to ll(:actions, :edit), edit_glossary_path(glossary) %></td>		
			</tr>
		<% end %>
	</table>
	<p><b><%= link_to lc(:new), new_glossary_path %></b>&nbsp;</p>
</center>

