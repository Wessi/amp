<center>
	<% odaform_for @donor do |f| %>
		<table width="740" class="admin">
			<tr>
				<td class="title" colspan=2>Edit Donor Details</td>
			</tr>
			<tr>
				<td class="sub_title" width=50%>Donor</td>
				<td width=50%><%= current_donor.name %></td>
			</tr>

			<%= f.text_field :field_office_address, :label => "Field Office Address", :label_class => "sub_title" %>
			<%= f.text_field :field_office_phone, :label => "Field Office Phone", :label_class => "sub_title" %>
			<%= f.text_field :field_office_email, :label => "Field Office Email", :label_class => "sub_title" %>
			<%= f.text_field :field_office_website, :label => "Field Office Website", :label_class => "sub_title" %>
            
			<%= f.text_field :head_of_mission_name, :label => "Head of Mission - Name", :label_class => "sub_title" %>
			<%= f.text_field :head_of_mission_email, :label => "Head of Mission - Email", :label_class => "sub_title" %>
                
			<%= f.text_field :head_of_cooperation_name, :label => "Head of Cooperation - Name", :label_class => "sub_title" %>
			<%= f.text_field :head_of_cooperation_email, :label => "Head of Cooperation - Email", :label_class => "sub_title" %>
            
			<%= f.text_field :first_focal_point_name, :label => "Focal Point 1 - Name", :label_class => "sub_title" %>
			<%= f.text_field :first_focal_point_email, :label => "Focal Point 1 - Email", :label_class => "sub_title" %>
            
			<%= f.text_field :second_focal_point_name, :label => "Focal Point 2 - Name", :label_class => "sub_title" %>
			<%= f.text_field :second_focal_point_email, :label => "Focal Point 2 - Email", :label_class => "sub_title" %>

			<%= f.text_field :institutions_responsible_for_oda, :label => "Institutions Responsible for ODA", :label_class => "sub_title" %>
			<%= f.text_field :total_staff_in_country, :label => "Total Staff in Country", :label_class => "sub_title" %>
			<%= f.text_field :total_expatriate_staff, :label => "Total Expatriate Staff", :label_class => "sub_title" %>
			<%= f.text_field :total_local_staff, :label => "Total Local Staff", :label_class => "sub_title" %>
			<tr>
				<td><%= f.submit 'Submit' %></td>
			</tr>
		</table>
	<% end %>
	<p><b><%= link_to 'Back', :action => 'show' %></b>&nbsp;</p>
</center>