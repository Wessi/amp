<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
  <form-beans>
  	<form-bean name="mainreportform" type="org.digijava.module.mondrian.form.MainReportForm"/>
  	<form-bean name="testpageform" type="org.digijava.module.mondrian.form.TestPageForm"/>
  	<form-bean name="mondrianqueryform" type="org.digijava.module.mondrian.form.MondrianQueryForm"/>
  </form-beans>
  
  <action-mappings>
    <action name="mainreportform" path="/mondrian/mainreport" scope="session" type="org.digijava.module.mondrian.action.MainReport">
    	<forward name="forward" path="/showLayout.do?layout=mainreport"/>
    </action>
    <action name="testpageform" path="/mondrian/testpage" scope="session" type="org.digijava.module.mondrian.action.TestPage">
    	<forward name="forward" path="/showLayout.do?layout=testpage"/>
    </action>
     <action name="mondrianqueryform" path="/mondrian/querypage" scope="session" type="org.digijava.module.mondrian.action.MondrianQuery">
    	<forward name="forward" path="/showLayout.do?layout=querypage"/>
    </action>
   </action-mappings>
</struts-config>
