<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
  <form-beans>
    <form-bean name="cmsForm" type="org.digijava.module.cms.form.CMSForm" />
    <form-bean name="cmsContentItemForm" type="org.digijava.module.cms.form.CMSContentItemForm" />
    <form-bean name="cmsSendEmailForm" type="org.digijava.module.cms.form.SendEmailForm" />
    <form-bean name="cmsAdminForm" type="org.digijava.module.cms.form.CMSAdminForm" />
  </form-beans>
  <action-mappings>
    <action name="cmsForm" type="org.digijava.module.cms.action.RenderTeaser" scope="request" path="/cms/renderTeaser" />
    <action name="cmsForm" type="org.digijava.module.cms.action.ShowTaxonomyManager" scope="request" path="/cms/showTaxonomyManager">
      <forward name="showTaxonomyManager" path="/showLayout.do?layout=cms_taxonomyManager" />
    </action>
    <action name="cmsForm" type="org.digijava.module.cms.action.ShowSelectCategory" scope="request" path="/cms/showSelectCategory">
      <forward name="showSelectCategory" path="/showLayout.do?layout=cms_selectCategory" />
    </action>
    <action name="cmsForm" type="org.digijava.module.cms.action.AddCategory" scope="request" path="/cms/addCategory">
      <forward name="showCategoryDetails" path="/showLayout.do?layout=cms_categoryDetails" />
    </action>
    <action name="cmsForm" type="org.digijava.module.cms.action.EditCategory" scope="request" path="/cms/editCategory">
      <forward name="showCategoryDetails" path="/showLayout.do?layout=cms_categoryDetails" />
    </action>
    <action name="cmsForm" type="org.digijava.module.cms.action.DeleteCategory" scope="request" path="/cms/deleteCategory">
      <forward name="showTaxonomyManager" path="/cms/showTaxonomyManager.do" redirect="true" />
    </action>
    <action name="cmsForm" type="org.digijava.module.cms.action.ShowCategoryDetails" scope="request" path="/cms/showCategoryDetails">
      <forward name="showCategoryDetails" path="/showLayout.do?layout=cms_categoryDetails" />
    </action>
    <action name="cmsForm" type="org.digijava.module.cms.action.AddParentCategory" scope="request" path="/cms/addParentCategory">
      <forward name="showCategoryDetails" path="/showLayout.do?layout=cms_categoryDetails" />
    </action>
    <action name="cmsForm" type="org.digijava.module.cms.action.AddRelatedCategory" scope="request" path="/cms/addRelatedCategory">
      <forward name="showCategoryDetails" path="/showLayout.do?layout=cms_categoryDetails" />
    </action>
    <action name="cmsContentItemForm" type="org.digijava.module.cms.action.AddContentItemCategory" validate="false" input="/showLayout.do?layout=cms_createContentItem" scope="session" path="/cms/addContentItemCategory">
      <forward name="showCreateContentItem" path="/cms/showCreateContentItem.do?reset=false" redirect="true" />
      <forward name="showEditContentItem" path="/cms/showEditContentItem.do?reset=false" redirect="true" />
    </action>
    <action name="cmsContentItemForm" type="org.digijava.module.cms.action.AddContentItemCategoryFwd" validate="false" scope="session" path="/cms/addContentItemCategoryFwd">
      <forward name="addContentItemCategory" path="/cms/showSelectCategory.do?selType=3" />
    </action>
    <action name="cmsContentItemForm" type="org.digijava.module.cms.action.RemoveContentItemCategory" validate="false" input="/showLayout.do?layout=cms_createContentItem" scope="session" path="/cms/removeContentItemCategory">
      <forward name="showContentItem" path="/showLayout.do?layout=cms_createContentItem" />
    </action>
    <action name="cmsForm" type="org.digijava.module.cms.action.RemoveCategory" scope="request" path="/cms/removeCategory">
      <forward name="showCategoryDetails" path="/showLayout.do?layout=cms_categoryDetails" />
    </action>
    <action name="cmsForm" type="org.digijava.module.cms.action.SaveCategory" validate="true" input="/showLayout.do?layout=cms_categoryDetails" scope="request" path="/cms/saveCategory">
      <forward name="showTaxonomyManager" path="/cms/showTaxonomyManager.do" redirect="true" />
    </action>
    <action name="cmsForm" type="org.digijava.module.cms.action.BrowseCategories" scope="request" path="/cms/browseCategories">
      <forward name="browseCategories" path="/showLayout.do?layout=cms_browseCategories" />
      <forward name="browseSubCategories" path="/showLayout.do?layout=cms_browseSubCategories" />
      <forward name="showCMSSettings" path="/cms/showCMSSettings.do" redirect="true" />
    </action>
    <!-- -->
    <action name="cmsContentItemForm" type="org.digijava.module.cms.action.ShowItemDetails" validate="false" scope="session" path="/cms/showItemDetails">
      <forward name="showItemDetails" path="/showLayout.do?layout=cms_showItemDetails" />
    </action>
    <action name="cmsContentItemForm" type="org.digijava.module.cms.action.ShowCreateContentItem" validate="false" scope="session" path="/cms/showCreateContentItem">
      <forward name="showCreateContentItem" path="/showLayout.do?layout=cms_createContentItem" />
    </action>
    <action name="cmsContentItemForm" type="org.digijava.module.cms.action.CreateContentItem" validate="true" input="/showLayout.do?layout=cms_createContentItem" scope="session" path="/cms/createContentItem">
      <forward name="createContentItem" path="/cms/browseCategories.do" redirect="true" />
    </action>
    <action name="cmsContentItemForm" type="org.digijava.module.cms.action.PreviewContentItem" validate="false" scope="session" path="/cms/previewContentItem">
      <forward name="previewContentItem" path="/showLayout.do?layout=cms_previewContentItem" />
    </action>
    <action name="cmsContentItemForm" type="org.digijava.module.cms.action.ShowEditContentItem" validate="false" scope="session" path="/cms/showEditContentItem">
      <forward name="showEditContentItem" path="/showLayout.do?layout=cms_editContentItem" />
    </action>
    <action name="cmsContentItemForm" type="org.digijava.module.cms.action.EditContentItem" validate="true" input="/showLayout.do?layout=cms_editContentItem" scope="session" path="/cms/editContentItem">
      <forward name="editContentItem" path="/cms/browseCategories.do" redirect="true" />
    </action>
    <action name="cmsContentItemForm" type="org.digijava.module.cms.action.DeleteContentItem" validate="false" scope="request" path="/cms/deleteContentItem">
      <forward name="deleteContentItem" path="/cms/viewContentItems.do" redirect="true" />
    </action>
    <action name="cmsContentItemForm" type="org.digijava.module.cms.action.ViewContentItems" validate="false" scope="request" path="/cms/viewContentItems">
      <forward name="viewContentItems" path="/showLayout.do?layout=cms_viewContentItems" />
    </action>
    <action name="cmsContentItemForm" type="org.digijava.module.cms.action.ViewMyContentItems" validate="false" scope="request" path="/cms/viewMyContentItems">
      <forward name="viewMyContentItems" path="/showLayout.do?layout=cms_viewMyContentItems" />
    </action>
    <action name="cmsContentItemForm" type="org.digijava.module.cms.action.ShowContentItemDetails" validate="false" scope="request" path="/cms/showContentItemDetails">
      <forward name="showContentItemDetails" path="/showLayout.do?layout=cms_contentItemsDetails" />
    </action>
    <action name="cmsSendEmailForm" type="org.digijava.module.cms.action.ShowSendEmail" validate="false" scope="request" path="/cms/showSendEmail">
      <forward name="forward" path="/showLayout.do?layout=cms_showSendEmail" />
    </action>
    <action name="cmsSendEmailForm" type="org.digijava.module.cms.action.SendEmail" validate="true" input="/showLayout.do?layout=cms_showSendEmail" scope="request" path="/cms/sendEmail">
      <forward name="success" path="/showLayout.do?layout=cms_sendEmailSuccess" />
      <forward name="error" path="/showLayout.do?layout=cms_sendEmailError" />
    </action>
    <action name="cmsAdminForm" type="org.digijava.module.cms.action.ShowCMSSettings" scope="request" path="/cms/showCMSSettings">
      <forward name="showCMSSettings" path="/showLayout.do?layout=cms_Settings" />
    </action>
    <action name="cmsAdminForm" type="org.digijava.module.cms.action.SaveCMSSettings" scope="request" path="/cms/saveCMSSettings">
      <forward name="saveCMSSettings" path="/showLayout.do?layout=cms_Settings" />
    </action>
    <action type="org.digijava.module.cms.action.LoadCMS" path="/cms/index">
      <forward name="browseCategories" path="/cms/browseCategories.do" />
      <forward name="showCMSSettings" path="/cms/showCMSSettings.do" redirect="true" />
    </action>
    <action name="cmsContentItemForm" type="org.digijava.module.cms.action.DownloadFile" validate="false" scope="request" path="/cms/downloadFile" />
    <action name="cmsContentItemForm" type="org.digijava.module.cms.action.ShowChangeItemStatus" validate="false" input="/cms/viewContentItems.do" scope="request" path="/cms/showChangeItemStatus">
      <forward name="confirm" path="/showLayout.do?layout=cms_confirmContentItemAction" />
    </action>
    <action name="cmsContentItemForm" type="org.digijava.module.cms.action.ChangeItemStatus" validate="false" input="/cms/viewContentItems.do" scope="request" path="/cms/changeItemStatus">
      <forward name="viewItems" path="/cms/viewContentItems.do" />
    </action>
    <action name="cmsContentItemForm" type="org.digijava.module.cms.action.ShowSelectItemFile" validate="false" scope="session" path="/cms/showSelectFile">
      <forward name="showSelectFile" path="/showLayout.do?layout=cms_selectFile" />
    </action>
    <action name="cmsContentItemForm" type="org.digijava.module.cms.action.SelectItemFile" validate="false" scope="session" path="/cms/selectFile">
      <forward name="showCreate" path="/cms/showCreateContentItem.do?reset=false" redirect="true" />
      <forward name="showEdit" path="/cms/showEditContentItem.do?reset=false" redirect="true" />
    </action>
  </action-mappings>
</struts-config>
