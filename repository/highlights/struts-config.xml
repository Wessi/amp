<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>
  <form-beans>
    <form-bean name="highlightForm" type="org.digijava.module.highlights.form.HighlightForm" />
    <form-bean name="highlightItemForm" type="org.digijava.module.highlights.form.HighlightItemForm" />
    <form-bean name="adminHighlightItemForm" type="org.digijava.module.highlights.form.HighlightItemForm" />
  </form-beans>

  <action-mappings>

   	<!-- Default view definition -->
      <action forward="/highlights/viewAllHighlights.do" path="/highlights/index" />
 	<!-- End default view definition -->

    <action name="highlightForm" type="org.digijava.module.highlights.action.ShowImage" scope="request" path="/highlights/showImage" />
    <action name="highlightForm" type="org.digijava.module.highlights.action.RenderTeaser" scope="request" path="/highlights/renderTeaser" />
   	<action name="highlightForm" type="org.digijava.module.highlights.action.DisplayTeaserAction" scope="request" path="/highlights/showDynamicHighlightTeaser" />
    <action name="highlightForm" type="org.digijava.module.highlights.action.ShowMore" validate="false" scope="request" path="/highlights/showMore">
          <forward name="forward" path="/showLayout.do" />
    </action>
    <action name="highlightItemForm" type="org.digijava.module.highlights.action.PreviewImage"  scope="session" path="/highlights/previewImage" validate="false" />
    <action name="highlightItemForm" type="org.digijava.module.highlights.action.ShowCreateHighlight" scope="session" validate="false" path="/highlights/showCreateHighlight">
      <forward name="forward" path="/showLayout.do?layout=createHighlight" />
    </action>
    <action name="highlightItemForm" type="org.digijava.module.highlights.action.ShowEditHighlight"  scope="session" validate="false" path="/highlights/showEditHighlight">
      <forward name="forward" path="/showLayout.do?layout=editHighlight" />
    </action>
    <action name="highlightItemForm" type="org.digijava.module.highlights.action.CreateHighlight"  scope="session" validate="true" input="/showLayout.do?layout=createHighlight"  path="/highlights/createHighlight">
         <forward name="forward" path="/" redirect="true" />
    </action>
    <action name="highlightItemForm" type="org.digijava.module.highlights.action.EditHighlight" scope="session" validate="true" input="/showLayout.do?layout=editHighlight" path="/highlights/editHighlight" >
         <forward name="forward" path="/highlights/showEditHighlight.do" redirect="true" />
    </action>
    <action name="highlightItemForm" type="org.digijava.module.highlights.action.PreviewHighlight" scope="session" validate="false" path="/highlights/previewHighlight">
      <forward name="forwardCreate" path="/showLayout.do?layout=previewHighlight" />
      <forward name="forwardEdit" path="/showLayout.do?layout=previewEditHighlight" />
    </action>
    <action name="highlightItemForm" type="org.digijava.module.highlights.action.ArchiveHighlight" scope="session" validate="false" path="/highlights/archiveHighlight">
         <forward name="forward" path="/highlights/showCreateHighlight.do" redirect="true" />
    </action>
    <action name="highlightItemForm" type="org.digijava.module.highlights.action.RevokeHighlight" scope="request" validate="false" path="/highlights/revokeHighlight" >
      <forward name="forward" path="/highlights/viewAllHighlights.do" redirect="true" />
    </action>
    <action name="highlightItemForm" type="org.digijava.module.highlights.action.AddLink" scope="session" validate="false"  path="/highlights/addLink">
      <forward name="forwardCreate" path="/highlights/showCreateHighlight.do?reset=false" redirect="true" />
      <forward name="forwardEdit" path="/highlights/showEditHighlight.do?reset=false" redirect="true" />
    </action>
    <action name="highlightItemForm" type="org.digijava.module.highlights.action.DeleteLink" scope="session" validate="false"  path="/highlights/deleteLink">
      <forward name="forwardCreate" path="/highlights/showCreateHighlight.do?reset=false" redirect="true" />
      <forward name="forwardEdit" path="/highlights/showEditHighlight.do?reset=false" redirect="true" />
    </action>
    <action name="highlightItemForm" type="org.digijava.module.highlights.action.ViewAllHighlights" scope="request" validate="false" path="/highlights/viewAllHighlights">
      <forward name="forward" path="/showLayout.do?layout=allHighlights" />
    </action>
    <action name="highlightItemForm" type="org.digijava.module.highlights.action.ViewAllHighlights" scope="request" validate="false" path="/highlights/adminViewAllHighlights">
      <forward name="forward" path="/showLayout.do?layout=adminAllHighlights" />
    </action>
    <action name="highlightItemForm" type="org.digijava.module.highlights.action.ViewHighlight" scope="request" input="/showLayout.do?layout=archivedHighlights" validate="false" path="/highlights/viewHighlight">
      <forward name="forward" path="/showLayout.do?layout=viewHighlight" />
    </action>
    <action name="highlightItemForm" type="org.digijava.module.highlights.action.ToggleImage" scope="request" validate="false" path="/highlights/toggleImage" >
      <forward name="forward" path="/highlights/viewAllHighlights.do" redirect="true" />
    </action>
    <action name="highlightItemForm" type="org.digijava.module.highlights.action.TogglePublic" scope="request" validate="false" path="/highlights/togglePublic" >
      <forward name="forward" path="/highlights/viewAllHighlights.do" redirect="true" />
    </action>
  </action-mappings>
</struts-config>
