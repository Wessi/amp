<?xml version="1.0" encoding="UTF-8"?>
<tns:patch closeOnSuccess="true" retryOnFail="true"
	xmlns:tns="http://docs.ampdev.net/schemas/xmlpatcher" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://docs.ampdev.net/schemas/xmlpatcher ../doc/xmlpatcher.xsd ">
	
	<jira>AMP-8055</jira>
	<author>dare</author>
	<description>
		change message_utf8 column to UTF-8
	</description>	
	
	
	<apply>		
		<script>
			<lang type="sql" delimiter=";">
				ALTER TABLE dg_message MODIFY COLUMN `message_utf8` text CHARACTER SET utf8;
				ALTER TABLE dg_message MODIFY COLUMN `ORIG_MESSAGE` text CHARACTER SET utf8;
			</lang>
		</script>
	</apply>
</tns:patch>
