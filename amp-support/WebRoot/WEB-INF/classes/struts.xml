<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	
	<package name="org.dgfundation.amp.support.action" extends="struts-default">
		
		<action name="login" class="org.dgfundation.amp.support.action.LoginAction">
			<result name="login" type="dispatcher">
				<param name="location">/login.jsp</param>
			</result>
			<result name="input">/login.jsp</result>
		</action>

		<action name="postloging" class="org.dgfundation.amp.support.action.LoginAction" method="postLoging">
			<result name="succes" type="redirect-action">
				<param name="actionName">showRequestForm</param>
			</result>
			
			<result name="input">/login.jsp</result>

			<result name="failed" type="redirect-action">
				<param name="actionName">loginfailed</param>
			</result>
			
			<result name="isadmin" type="redirect-action">
				<param name="actionName">admin</param>
			</result>
			
		</action>

		<action name="loginfailed" class="org.dgfundation.amp.support.action.LoginAction" method="loginfailed">
			<result name="failed" type="dispatcher">
				<param name="location">/login.jsp</param>
			</result>
		</action>


		<action name="showRequestForm" class="org.dgfundation.amp.support.action.ShowRequestForm">
			<result name="succes" type="dispatcher">
				<param name="location">/requestform.jsp</param>
			</result>
		</action>


		<action name="saveRequest" class="org.dgfundation.amp.support.action.ShowRequestForm" method="saveRequest">
			<result name="succes" type="redirect-action">
				<param name="actionName">requestEnd</param>
			</result>
			<result name="failed" type="redirect-action">
				<param name="actionName">saveFailed</param>
			</result>
			<result name="input">/requestform.jsp</result>
		</action>
		
		<action name="saveFailed" class="org.dgfundation.amp.support.action.ShowRequestForm" method="saveFailed">
			<result name="failed" type="dispatcher">
				<param name="location">/requestform.jsp</param>
			</result>
		</action>
		
		<action name="requestEnd" class="org.dgfundation.amp.support.action.RequestEnd">
			<result name="viewend" type="dispatcher">
				<param name="location">/requestend.jsp</param>
			</result>
		</action>
		
		<action name="admin" class="org.dgfundation.amp.support.action.Admin">
			<result name="input">/admin.jsp</result>
			<result name="admin" type="dispatcher">
				<param name="location">/admin.jsp</param>
			</result>
		</action>
	</package>
</struts>