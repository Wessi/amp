<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class name="org.digijava.module.news.dbentity.NewsItem" table="DG_NEWS_ITEM">
	  	<!--<cache usage="read-write"/>-->
		<id column="ID" name="id" type="java.lang.Long" unsaved-value="null">
			<generator class="native">
				<param name="sequence">dg_news_item_seq</param>
			</generator>
		</id>
		<many-to-one name="news" column="NEWS_ID"  class="org.digijava.module.news.dbentity.News" cascade="none" />
		<property name="language" column="LANGUAGE"  type="java.lang.String" />
		<property name="userId" column="USER_ID"  type="java.lang.Long"/>
		<property name="title" column="TITLE"  type="java.lang.String"/>
		<property name="description" column="DESCRIPTION"  type="org.digijava.kernel.db.SafeClobType"/>
		<property name="creationIp" column="CREATION_IP"  type="java.lang.String"/>
	    <property name="creationDate" column="CREATION_DATE"  type="java.util.Date"/>
	</class>
</hibernate-mapping>