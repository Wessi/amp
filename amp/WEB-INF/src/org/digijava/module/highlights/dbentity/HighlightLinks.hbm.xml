<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
        <class name="org.digijava.module.highlights.dbentity.HighlightLinks" table="DG_HIGHLIGHT_LINK">
		<composite-id>
			<key-many-to-one name="highlight" class="org.digijava.module.highlights.dbentity.Highlight" column="HIGHLIGHT_ID"/>
     		<key-property name="offset" column="OFFSET" type="int"/>
		</composite-id>
	    <property name="url" column="URL" type="java.lang.String"/>
		<property name="name" column="NAME" type="java.lang.String"/>
        </class>
</hibernate-mapping>

