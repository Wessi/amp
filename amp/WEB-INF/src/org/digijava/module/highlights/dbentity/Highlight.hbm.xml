<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class name="org.digijava.module.highlights.dbentity.Highlight" table="DG_HIGHLIGHT">
<!--		<cache usage="read-write" /> -->
		<id name="id" column="HIGHLIGHT_ID" type="java.lang.Long" unsaved-value="null">
          <generator class="native">
                      <param name="sequence">DG_HIGHLIGHT_seq</param>
          </generator>
		</id>
		<property name="siteId" column="SITE_ID"  type="java.lang.String"/>
		<property name="instanceId" column="INSTANCE_ID"  type="java.lang.String"/>
		<property name="title" column="TITLE"  type="java.lang.String"/>
		<property name="description" column="DESCRIPTION"  type="java.lang.String"/>
		<property name="topic" column="TOPIC"  type="org.digijava.kernel.db.SafeClobType"/>
		<property name="creationDate" column="CREATION_DATE"  type="java.util.Date"/>
		<property name="updationDate" column="UPDATION_DATE"  type="java.util.Date"/>
		<property name="active" column="ACTIVE"  type="boolean"/>
		<property name="authorUserId" column="AUTHOR_USER_ID"  type="java.lang.Long"/>
		<property name="updaterUserId" column="UPDATER_USER_ID"  type="java.lang.Long"/>
	    	<property name="layout" column="LAYOUT"  type="int"/>
	        <property name="shortTopicLength" column="SHORT_LENGTH"  type="int" />
	        <property name="imageHeight" column="HEIGHT"  type="int" />
	        <property name="imageWidth" column="WIDTH"  type="int" />
   	        <property name="image" column="PICTURE" type="org.digijava.kernel.db.SafeBlobType"/>
                <property name="contentType" column="IMG_TYPE" type="java.lang.String" />
                <property name="showImage" column="SHOW_IMAGE" type="boolean" />
		<property name="isPublic"   column="IS_PUBLIC" type="boolean" />

        <set name="links" cascade="delete" inverse="true" order-by="offset asc">
<!--		<cache usage="read-write" /> -->
			<key column="HIGHLIGHT_ID"/>
			<one-to-many class="org.digijava.module.highlights.dbentity.HighlightLinks"/>
		</set>

	</class>
</hibernate-mapping>

