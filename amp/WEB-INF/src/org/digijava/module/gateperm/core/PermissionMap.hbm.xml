<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
  <class name="org.digijava.module.gateperm.core.PermissionMap" table="PERM_MAP">
		<cache usage="read-write" />
		<id name="id" column="id" type="java.lang.Long">
			<generator class="native">
				<param name="sequence">PERM_MAP_id</param>
			</generator>
		</id>

		<property name="permissibleCategory" column="permissible_category" type="java.lang.String" index="perm_map_permissible_category_idx"/>
		<property name="objectIdentifier" column="object_identifier" type="java.lang.Long" index="perm_map_obj_identifier_idx"/>
		
		<many-to-one name="permission" column="permission_id" 
		class="org.digijava.module.gateperm.core.Permission" cascade="none"/>	

	</class>
</hibernate-mapping>