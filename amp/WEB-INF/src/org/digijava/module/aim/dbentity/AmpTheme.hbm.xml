<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.digijava.module.aim.dbentity.AmpTheme" table="AMP_THEME">
		<cache usage="read-write" />
		<id name="ampThemeId" column="amp_theme_id" type="java.lang.Long">
			<generator class="native">
				<param name="sequence">AMP_THEME_seq</param>
			</generator>
		</id>
		<many-to-one name="parentThemeId" column="parent_theme_id"
			class="org.digijava.module.aim.dbentity.AmpTheme" cascade="none" />
		<property name="themeCode" column="theme_code" type="java.lang.String" />
		<property name="name" column="name" type="java.lang.String" />
		<!-- <property name="type" column="type" type="java.lang.String"/>  -->
		<property name="indlevel" column="level" type="java.lang.Integer" />
		<property name="description" column="description" type="text" />
		<property name="language" column="language" type="java.lang.String" />
		<property name="version" column="version" type="java.lang.String" />

		<property name="leadAgency" column="lead_agency" type="java.lang.String" />
		<property name="targetGroups" column="target_groups" type="java.lang.String" />
		<property name="background" column="background" type="java.lang.String" />
		<property name="objectives" column="objectives" type="java.lang.String" />
		<property name="outputs" column="outputs" type="java.lang.String" />
		<property name="beneficiaries" column="beneficiaries" type="java.lang.String" />
		<property name="environmentConsiderations" column="environment_considerations"
			type="java.lang.String" />

		<property access="field" name="externalFinancing" column="external_financing"
			type="java.lang.Double" />
		<property access="field" name="internalFinancing" column="internal_financing"
			type="java.lang.Double" />
		<property access="field" name="totalFinancing" column="total_financing"
			type="java.lang.Double" />

		<many-to-one name="typeCategoryValue" column="type_category_value_id"
			class="org.digijava.module.categorymanager.dbentity.AmpCategoryValue" cascade="none" not-null="true" />

		<many-to-one name="activityId" column="amp_activity_id"
			class="org.digijava.module.aim.dbentity.AmpActivity" cascade="none" not-null="false" />
		<set name="activities" table="AMP_ACTIVITY_THEME" lazy="true" cascade="none"
			inverse="true">
			<cache usage="read-write" />
			<key column="amp_theme_id" />
			<many-to-many class="org.digijava.module.aim.dbentity.AmpActivity"
				column="amp_activity_id" />
		</set>
		<set name="indicators" lazy="true" cascade="delete-orphan" inverse="true">
			<key column="theme_id" />
			<one-to-many class="org.digijava.module.aim.dbentity.IndicatorTheme" />
		</set>
		<set name="programSettings" lazy="false">
			<cache usage="read-write" />
			<key column="default_hierarchy" />
			<one-to-many class="org.digijava.module.aim.dbentity.AmpActivityProgramSettings" />
		</set>
	</class>
</hibernate-mapping>
