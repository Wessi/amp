<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class name="org.digijava.module.cms.dbentity.CMSContentItem" table="DG_CMS_CONTENT_ITEM">
		<cache usage="read-write"/>
		<id column="ID" name="id" type="long" unsaved-value="0">
			<generator class="native">
				<param name="sequence">dg_cms_content_item_seq</param>
			</generator>
		</id>
		<many-to-one name="owner" column="OWNER_CMS" class="org.digijava.module.cms.dbentity.CMS" cascade="none"/>

		<property name="title" column="TITLE" type="java.lang.String"/>
		<property name="description" column="DESCRIPTION" type="org.digijava.kernel.db.SafeClobType"/>
		<property name="url" column="URL" type="java.lang.String"/>
		<property name="fileName"  column="FILE_NAME" type="java.lang.String" />
		<property name="date" column="DATE" type="java.lang.String" />
		<property name="contentType" column="CONTENT_TYPE" type="java.lang.String" />
		<property name="file" column="FILE_CONTENT" type="org.digijava.kernel.db.SafeBlobType"/>
		<property name="isFile" column="IS_FILE" type="boolean" />
		<property name="submissionDate" column="SUBMISSION_DATE" type="java.util.Date" />
		<property name="published" column="PUBLISHED" type="boolean" />
		<property name="rejected" column="REJECTED" type="boolean" />
		<property name="docComment" column="COMMENTS" type="org.digijava.kernel.db.SafeClobType"/>

		<many-to-one name="language" column="LANGUAGE" class="org.digijava.kernel.entity.Locale" cascade="none"/>
		<many-to-one name="country" column="COUNTRY" class="org.digijava.kernel.dbentity.Country" cascade="none"/>
		<many-to-one name="authorUser" column="AUTHOR_USER" class="org.digijava.kernel.user.User" cascade="none"/>
		<many-to-one name="docType" column="DOCUMENT_TYPE" class="org.digijava.module.aim.dbentity.AmpCategoryValue" cascade="none" />
		<many-to-one name="docLanguage" column="DOCUMENT_LANGUAGE" class="org.digijava.module.aim.dbentity.AmpCategoryValue" cascade="none" />

        <set name="categories" table="DG_CMS_ITEM_CATEGORY_MAP" cascade="none">
          	<key column="ID"/>
        	<many-to-many class="org.digijava.module.cms.dbentity.CMSCategory" column="CATEGORY_ID"/>
        </set>
	</class>
</hibernate-mapping>
