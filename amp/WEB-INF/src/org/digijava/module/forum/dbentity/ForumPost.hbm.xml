<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class name="org.digijava.module.forum.dbentity.ForumPost" table="DG_FORUM_POST">
		<cache usage="read-write"/>
		<id column="ID" name="id" type="long" unsaved-value="0">
			<generator class="native">
				<param name="sequence">dg_forum_post_seq</param>
			</generator>
		</id>


		<many-to-one name="authorUserSettings" column="AUTHOR_USER_SETTINGS" class="org.digijava.module.forum.dbentity.ForumUserSettings" cascade="none"/>
		<many-to-one name="editedBy" column="EDITED_BY" class="org.digijava.module.forum.dbentity.ForumUserSettings" cascade="none"/>
		<property name="editedOn" column="EDITED_ON" type="java.util.Date"/>

		<property name="title" column="TITLE" type="java.lang.String"/>
		<property name="digiUserId" column="DIGI_USER_ID" type="long"/>
		<property name="postTime" column="POST_TIME" type="java.util.Date"/>
		<property name="content" column="CONTENT" type="org.digijava.kernel.db.SafeClobType"/>
		<property name="enableEmotions" column="ENABLE_EMOTIONS" type="boolean"/>
		<property name="allowHtml" column="ALLOW_HTML" type="boolean"/>
		<property name="notifyOnReply" column="NOTIFY_REPLY" type="boolean"/>
		<property name="published" column="PUBLISHED" type="boolean"/>
		<property name="unregisteredFullName" column="UNREGISTERED_FULL_NAME" type="java.lang.String"/>
		<property name="unregisteredEmail" column="UNREGISTERED_EMAIL" type="java.lang.String"/>
		<many-to-one name="thread" column="THREAD" class="org.digijava.module.forum.dbentity.ForumThread" cascade="none"/>
	</class>
</hibernate-mapping>
