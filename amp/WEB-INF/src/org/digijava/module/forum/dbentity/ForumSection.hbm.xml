<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class name="org.digijava.module.forum.dbentity.ForumSection" table="DG_FORUM_SECTION">
		<cache usage="read-write"/>
		<id column="ID" name="id" type="long" unsaved-value="0">
			<generator class="native">
				<param name="sequence">dg_forum_section_seq</param>
			</generator>
		</id>
		<many-to-one name="forum" column="FORUM" class="org.digijava.module.forum.dbentity.Forum" cascade="none"/>
		<property name="title" column="SECTION_TITLE" type="java.lang.String"/>
		<property name="comment" column="SECTION_COMMENT" type="java.lang.String"/>
		<property name="orderIndex" column="ORDER_INDEX" type="int"/>
		<property name="accessLevel" column="ACCESS_LEVEL" type="int"/>
<!--
		<set name="subsections" cascade="all" inverse="true">
			<key column="SECTION"/>
			<one-to-many class="org.digijava.module.forum.dbentity.ForumSubsection"/>
		</set>
-->

		<set name="subsections" cascade="all-delete-orphan" order-by="ORDER_INDEX asc" inverse="true">
			<key column="SECTION"/>
			<one-to-many class="org.digijava.module.forum.dbentity.ForumSubsection"/>
		</set>

	</class>
</hibernate-mapping>
