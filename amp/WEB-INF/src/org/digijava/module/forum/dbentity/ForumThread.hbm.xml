<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class name="org.digijava.module.forum.dbentity.ForumThread" table="DG_FORUM_THREAD">
		<cache usage="read-write"/>
		<id column="ID" name="id" type="long" unsaved-value="0">
			<generator class="native">
				<param name="sequence">dg_forum_thread_seq</param>
			</generator>
		</id>
		<property name="title" column="THREAD_TITLE" type="java.lang.String"/>
		<property name="comment" column="THREAD_COMMENT" type="java.lang.String"/>
		<property name="locked" column="LOCKED" type="boolean"/>
		<property name="creationDate" column="CREATION_DATE" type="java.util.Date"/>
		<!--<property name="postCount" column="POST_COUNT" type="int"/>-->
		<many-to-one name="lastPost" column="LAST_POST" class="org.digijava.module.forum.dbentity.ForumPost" cascade="all"/>
		<many-to-one name="subsection" column="SUBSECTION" class="org.digijava.module.forum.dbentity.ForumSubsection" cascade="none"/>
		<property name="authorUserId" column="AUTHOR_USER_ID" type="long"/>
		<property name="lastPostDate" column="LAST_POST_DATE" type="java.util.Date"/>
		<set lazy="true" name="posts" cascade="all" inverse="true">
			<key column="THREAD"/>
			<one-to-many class="org.digijava.module.forum.dbentity.ForumPost"/>
		</set>
		<many-to-one name="parentThread" column="PARENT_THREAD" class="org.digijava.module.forum.dbentity.ForumThread" cascade="none"/>
		<set name="shadowThreads" cascade="all" inverse="true">
			<key column="PARENT_THREAD"/>
			<one-to-many class="org.digijava.module.forum.dbentity.ForumThread"/>
		</set>
	</class>
</hibernate-mapping>
