<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd" [<!ENTITY dialect SYSTEM "resource:hibernate-dialect.xml">]>
<hibernate-configuration>
 <session-factory>
  <property name="transaction.factory_class">org.hibernate.transaction.JDBCTransactionFactory</property>
  <property name="connection.datasource">java:comp/env/ampDS</property>
  &dialect;
  <property name="current_session_context_class">thread</property>
  <property name="cache.provider_class">net.sf.ehcache.hibernate.SingletonEhCacheProvider</property>
  <property name="show_sql">false</property>
  <property name="jdbc.use_getGeneratedKeys">true</property>
  <property name="jdbc.use_streams_for_binary">true</property>
  <property name="query.substitutions">true 1, false 0, yes 'Y', no 'N'</property>
  <!-- <property name="hbm2ddl.auto">update</property> -->
 </session-factory>
</hibernate-configuration>
