<?xml version="1.0"?>
<module-config>
	<name>cms</name>
	<security>
		<action login-required="true" pattern="/showCreateContentItem.do" />
		<action login-required="true" pattern="/createContentItem.do" />
		<action login-required="true" pattern="/showEditContentItem.do" />
		<action login-required="true" pattern="/editContentItem.do" />
		<action login-required="true" pattern="/previewContentItem.do" />
		<action login-required="true" pattern="/addContentItemCategory.do" />
		<action login-required="true" pattern="/addContentItemCategoryFwd.do" />
		<action login-required="true" pattern="/removeContentItemCategory.do" />
		<action login-required="true" pattern="/viewMyContentItems.do" />
		<action login-required="true" pattern="/showSendEmail.do" />
		<action login-required="true" pattern="/sendEmail.do" />
		<action login-required="true" pattern="/downloadFile.do" />
		<action login-required="true" pattern="/selectItemFile.do" />
		<action login-required="true" pattern="/showSelectItemFile.do" />

		<action login-required="true" pattern="/deleteCategory.do">ADMIN</action>
		<action login-required="true" pattern="/deleteContentItem.do">ADMIN</action>

		<action login-required="true" pattern="/showTaxonomyManager.do">ADMIN</action>
		<action login-required="true" pattern="/addCategory.do">ADMIN</action>
		<action login-required="true" pattern="/addParentCategory.do">ADMIN</action>
		<action login-required="true" pattern="/addRelatedCategory.do">ADMIN</action>
		<action login-required="true" pattern="/editCategory.do">ADMIN</action>
		<action login-required="true" pattern="/removeCategory.do">ADMIN</action>
		<action login-required="true" pattern="/saveCategory.do">ADMIN</action>
		<action login-required="true" pattern="/showCategoryDetails.do">ADMIN</action>
		<action login-required="true" pattern="/showSelectCategory.do">ADMIN</action>

		<action login-required="true" pattern="/showCMSSettings.do">ADMIN</action>
		<action login-required="true" pattern="/saveCMSSettings.do">ADMIN</action>
		<action login-required="true" pattern="/changeItemStatus.do">ADMIN</action>
		<action login-required="true" pattern="/showChangeItemStatus.do">ADMIN</action>

		<action login-required="true" pattern="/viewContentItems.do">ADMIN</action>

	<action pattern="/showCreateContentItem">
	  <param name="catId" />
	</action>
	<action pattern="/showEditContentItem">
	  <param name="itemId" />
	</action>
	<action pattern="/viewMyContentItems">
	  <param name="viewMode" />
	</action>
	<action pattern="/showSendEmail">
	  <param name="itemId" />
	</action>

	<action pattern="/viewContentItems">
	  <param name="viewMode" />
	</action>
	<action pattern="/showCategoryDetails">
	  <param name="categoryId" />
	</action>
	<action pattern="/showSelectCategory">
	  <param name="categoryId" />
	  <param name="selType" />
	</action>
	<action pattern="/removeCategory">
	  <param name="removeCategoryId" />
	  <param name="selType" />
	</action>
	<action pattern="/deleteContentItem">
	  <param name="itemId" />
	</action>



	</security>

	<hibernate-classes required="false">
		<hibernate-class>org.digijava.module.cms.dbentity.CMS</hibernate-class>
		<hibernate-class>org.digijava.module.cms.dbentity.CMSCategory</hibernate-class>
		<hibernate-class>org.digijava.module.cms.dbentity.CMSContentItem</hibernate-class>
	</hibernate-classes>
</module-config>
