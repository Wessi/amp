<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE form-validation PUBLIC "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.0//EN"           "http://jakarta.apache.org/commons/dtds/validator_1_0.dtd">
<form-validation>
	<global></global>
	<formset>
	      <!-- CMS module -->
		<form name="cmsSendEmailForm">
			<field property="to" depends="required,maxlength">
				<arg0 key="display.cms.to"/>
				<arg1 name="maxlength" key="${var:maxlength}" resource="false"/>
				<var>
					<var-name>maxlength</var-name>
					<var-value>100</var-value>
				</var>
			</field>
			<field property="subject" depends="required,maxlength">
				<arg0 key="display.cms.subject"/>
				<arg1 name="maxlength" key="${var:maxlength}" resource="false"/>
				<var>
					<var-name>maxlength</var-name>
					<var-value>100</var-value>
				</var>
			</field>
			<field property="message" depends="required,maxlength">
				<arg0 key="display.cms.message"/>
				<arg1 name="maxlength" key="${var:maxlength}" resource="false"/>
				<var>
					<var-name>maxlength</var-name>
					<var-value>2000</var-value>
				</var>
			</field>
		</form>
		 <!-- End of cms module -->
	</formset>
</form-validation>
