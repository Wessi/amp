<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>
  <form-beans>
    <form-bean name="pollForm" type="org.digijava.module.poll.form.PollForm" />
  </form-beans>

  <action-mappings>
    <action name="pollForm" type="org.digijava.module.poll.action.RenderTeaser" scope="request" path="/poll/renderTeaser" />
    <action name="pollForm" type="org.digijava.module.poll.action.PollAction" scope="request" path="/poll/pollAction">
      <forward name="forward" path="/showLayout.do" />
    </action>
  </action-mappings>

</struts-config>
