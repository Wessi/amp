<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
  <form-beans>
    <form-bean name="newsForm" type="org.digijava.module.news.form.NewsForm" />
    <form-bean name="newsAdminForm" type="org.digijava.module.news.form.NewsAdminForm" />
    <form-bean name="newsItemForm" type="org.digijava.module.news.form.NewsItemForm" />
  </form-beans>
  <action-mappings>

   	<!-- Default view definition -->
     <action forward="/news/viewAllNews.do" path="/news/index" />
 	<!-- End default view definition -->

    <!-- News Module -->
    <action name="newsForm" type="org.digijava.module.news.action.RenderTeaser" scope="request" path="/news/renderTeaser" />
    <action name="newsItemForm" type="org.digijava.module.news.action.ViewAllNews" validate="false" scope="session" path="/news/viewAllNews">
      <forward name="forward" path="/showLayout.do?layout=allNews" />
    </action>
    <action name="newsItemForm" type="org.digijava.module.news.action.ShowCreateNewsItem" scope="request" validate="false" path="/news/showCreateNewsItem">
      <forward name="forward" path="/showLayout.do?layout=createNewsItem" />
    </action>
    <action name="newsItemForm" type="org.digijava.module.news.action.CreateNewsItem" validate="true" scope="request" input="/showLayout.do?layout=createNewsItem" path="/news/createNewsItem">
      <forward name="forward" path="/" redirect="true" />
    </action>
    <action name="newsItemForm" type="org.digijava.module.news.action.PreviewNewsItem" validate="false" scope="session" path="/news/previewNewsItem">
      <forward name="forwardCreate" path="/showLayout.do?layout=previewNewsItem" />
      <forward name="forwardEdit" path="/showLayout.do?layout=previewEditNewsItem" />
    </action>
    <action name="newsItemForm" type="org.digijava.module.news.action.ShowNewsItemDetails" validate="false" scope="session" path="/news/showNewsItemDetails">
      <forward name="forward" path="/showLayout.do?layout=newsItemDetails" />
    </action>
    <action name="newsItemForm" type="org.digijava.module.news.action.EditNewsItem" validate="true" scope="request" input="/showLayout.do?layout=editNewsItem" path="/news/editNewsItem" />
    <action name="newsItemForm" type="org.digijava.module.news.action.ShowEditNewsItem" validate="false" scope="session" path="/news/showEditNewsItem">
      <forward name="forward" path="/showLayout.do?layout=editNewsItem" />
    </action>
    <action name="newsItemForm" type="org.digijava.module.news.action.ConfirmNewsItems" validate="false" scope="session" path="/news/confirmNewsItems">
      <forward name="forward" path="/showLayout.do?layout=confirmNewsItems" />
      <forward name="error" path="/showLayout.do?layout=newsAdmin" />
    </action>
    <action name="newsItemForm" type="org.digijava.module.news.action.UpdateConfirmNewsItems" validate="false" scope="session" path="/news/updateConfirmNewsItems" />
<!--      <forward name="forward" path="/news/showNewsItems.do" />
    </action> -->
    <action name="newsAdminForm" type="org.digijava.module.news.action.ShowNewsItemSettings" validate="false" scope="session" path="/news/showNewsItemSettings">
      <forward name="forward" path="/showLayout.do?layout=newsSettings" />
    </action>
    <action name="newsAdminForm" type="org.digijava.module.news.action.UpdateNewsItemSettings" validate="false" scope="session" path="/news/updateNewsItemSettings">
      <forward name="forward" path="/news/viewAllNews.do" redirect="true" />
    </action>
    <action name="newsItemForm" type="org.digijava.module.news.action.ShowNewsItems" validate="false" scope="session" path="/news/showNewsItems">
      <forward name="forward" path="/showLayout.do?layout=newsAdmin" />
    </action>


    <!-- Syndication Module -->
    <action name="collectorFeedForm" type="org.digijava.module.syndication.action.AggregatorFeedList" validate="false" scope="request" path="/news/aggregatorFeedList">
      <forward name="forward" path="/showLayout.do?layout=aggregatorFeedList" />
    </action>

    <action name="collectorFeedForm" type="org.digijava.module.syndication.action.CollectorFeedList" validate="false" scope="request" path="/news/collectorFeedList">
      <forward name="forward" path="/showLayout.do?layout=collectorFeedList" />
    </action>
    <action name="collectorFeedForm" type="org.digijava.module.syndication.action.ManageFeed" validate="false" scope="request" path="/news/manageFeed">
      <forward name="forward" path="/news/collectorFeedList.do" redirect="true"/>
    </action>
    <action name="collectorFeedForm" type="org.digijava.module.syndication.action.ShowCreateNewFeed" validate="false" scope="request" path="/news/showCreateNewFeed">
      <forward name="forward" path="/showLayout.do?layout=createEditFeed" />
    </action>
    <action name="collectorFeedForm" type="org.digijava.module.syndication.action.ShowEditNewFeed" validate="false" scope="request" path="/news/showEditNewFeed">
      <forward name="forward" path="/showLayout.do?layout=createEditFeed" />
    </action>
    <action name="collectorFeedForm" type="org.digijava.module.syndication.action.ConfirmNewFeed" validate="true" input="/showLayout.do?layout=createEditFeed" scope="request" path="/news/confirmNewFeed">
      <forward name="forward" path="/showLayout.do?layout=confirmNewFeed" />
      <forward name="return" path="/showLayout.do?layout=createEditFeed" />
    </action>
    <action name="collectorFeedForm" type="org.digijava.module.syndication.action.CreateNewFeed" validate="false" scope="request" path="/news/createNewFeed">
      <forward name="forward" path="/news/collectorFeedList.do" />
    </action>
    <action name="collectorFeedForm" type="org.digijava.module.syndication.action.EditNewFeed" validate="false" scope="request" path="/news/editNewFeed">
      <forward name="forward" path="/news/collectorFeedList.do" />
    </action>

    <action name="publishedFeedForm" type="org.digijava.module.syndication.action.PublishedFeedList" validate="false" scope="request" path="/news/publishedFeedList">
      <forward name="forward" path="/showLayout.do?layout=publishedFeedList" />
    </action>
    <action name="publishedFeedForm" type="org.digijava.module.syndication.action.ManagePublishedFeed" validate="false" scope="request" path="/news/managePublishedFeed">
      <forward name="forward" path="/news/publishedFeedList.do" redirect="true"/>
    </action>
    <action name="publishedFeedForm" type="org.digijava.module.syndication.action.ShowCreateNewPublishFeed" validate="false" scope="request" path="/news/showCreateNewPublishFeed">
      <forward name="forward" path="/showLayout.do?layout=createEditPublishFeed" />
    </action>
    <action name="publishedFeedForm" type="org.digijava.module.syndication.action.ShowEditNewPublishFeed" validate="false" scope="request" path="/news/showEditNewPublishFeed">
      <forward name="forward" path="/showLayout.do?layout=createEditPublishFeed" />
    </action>
    <action name="publishedFeedForm" type="org.digijava.module.syndication.action.ConfirmNewPublishFeed" validate="true" input="/showLayout.do?layout=createEditPublishFeed" scope="request" path="/news/confirmNewPublishFeed">
      <forward name="forward" path="/showLayout.do?layout=confirmNewPublishFeed" />
      <forward name="return" path="/showLayout.do?layout=createEditPublishFeed" />
    </action>
    <action name="publishedFeedForm" type="org.digijava.module.syndication.action.CreateNewPublishFeed" validate="false" scope="request" path="/news/createNewPublishFeed">
      <forward name="forward" path="/news/publishedFeedList.do" />
    </action>
    <action name="publishedFeedForm" type="org.digijava.module.syndication.action.EditNewPublishFeed" validate="false" scope="request" path="/news/editNewPublishFeed">
      <forward name="forward" path="/news/publishedFeedList.do" />
    </action>
    <action name="publishedFeedForm" type="org.digijava.module.news.action.Publish" validate="false" scope="request" path="/news/publish" />


    <!-- Syndication End -->		

  </action-mappings>
</struts-config>
