<?xml version="1.0"?>
<module-config>
	<name>highlights</name>
	<security>
		<action login-required="true" pattern="/showCreateHighlight">ADMIN</action>
		<action login-required="true" pattern="/showEditHighlight">ADMIN</action>
		<action login-required="true" pattern="/archiveHighlight">ADMIN</action>
		<action login-required="true" pattern="/revokeHighlight">ADMIN</action>
		<action login-required="true" pattern="/createHighlight">ADMIN</action>
		<action login-required="true" pattern="/editHighlight">ADMIN</action>
		<action login-required="true" pattern="/previewHighlight">ADMIN</action>
		<action login-required="true" pattern="/previewImage">ADMIN</action>
		<action login-required="true" pattern="/addLink">ADMIN</action>
		<action login-required="true" pattern="/deleteLink">ADMIN</action>
  	    <action login-required="true" pattern="/toggleImage">ADMIN</action>
  	    <action login-required="true" pattern="/togglePublic">ADMIN</action>
	<action pattern="/archiveHighlight">
	  <param name="activeHighlightId" />
	</action>
	<action pattern="/showEditHighlight">
	  <param name="activeHighlightId" />
	</action>
	<action pattern="/revokeHighlight">
	  <param name="activeHighlightId" />
	</action>
	</security>


        <!-- highlights classes Begin-->
	<hibernate-classes required="false">
		<hibernate-class>org.digijava.module.highlights.dbentity.Highlight</hibernate-class>
		<hibernate-class>org.digijava.module.highlights.dbentity.HighlightLinks</hibernate-class>
	</hibernate-classes>
        <!-- highlights classes End-->

</module-config>

