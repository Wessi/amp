<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
  <form-beans>
    <form-bean name="forumForm" type="org.digijava.module.forum.form.ForumForm" />
    <form-bean name="forumPageForm" type="org.digijava.module.forum.form.ForumPageForm" />
    <form-bean name="forumAdminPageForm" type="org.digijava.module.forum.form.AdminPageForm" />
  </form-beans>
  <action-mappings>
    <action name="forumAdminPageForm" type="org.digijava.module.forum.action.admin.ShowEditForum" scope="request" path="/forum/adminShowEditForum">
      <forward name="showForumDetails" path="/showLayout.do?layout=forum_showForumDetails" />
    </action>
    <action name="forumAdminPageForm" type="org.digijava.module.forum.action.admin.SaveForum" validate="true" input="/showLayout.do?layout=forum_showForumAdminError" scope="request" path="/forum/adminSaveForum">
      <forward name="showAdminIndex" path="/forum/adminShowAdminIndex.do" redirect="true" />
    </action>
    <action name="forumForm" type="org.digijava.module.forum.action.RenderTeaser" scope="request" path="/forum/renderTeaser" />
    <action name="forumPageForm" type="org.digijava.module.forum.action.ShowForum" scope="request" path="/forum/index">
      <forward name="showForum" path="/showLayout.do?layout=forum_showForumPage" />
    </action>
    <action name="forumPageForm" type="org.digijava.module.forum.action.ShowSection" scope="request" path="/forum/showSection">
      <forward name="showSection" path="/showLayout.do?layout=forum_showSection" />
    </action>
    <action name="forumPageForm" type="org.digijava.module.forum.action.ShowSubsection" scope="request" path="/forum/showSubsection">
      <forward name="showSubsection" path="/showLayout.do?layout=forum_showSubsection" />
    </action>
    <action name="forumPageForm" type="org.digijava.module.forum.action.ShowThread" scope="request" path="/forum/showThread">
      <forward name="showThread" path="/showLayout.do?layout=forum_showThread" />
    </action>
    <action name="forumAdminPageForm" type="org.digijava.module.forum.action.admin.ShowAddForumSection" scope="request" path="/forum/adminShowAddSection">
      <forward name="sectionDetails" path="/showLayout.do?layout=forum_showSectionDetails" />
    </action>
    <action name="forumAdminPageForm" type="org.digijava.module.forum.action.admin.ShowEditForumSection" scope="request" path="/forum/adminShowEditSection">
      <forward name="sectionDetails" path="/showLayout.do?layout=forum_showSectionDetails" />
    </action>
    <action name="forumAdminPageForm" type="org.digijava.module.forum.action.admin.DeleteForumSection" scope="request" path="/forum/adminDeleteSection">
      <forward name="showAdminIndex" path="/forum/adminShowAdminIndex.do" redirect="true" />
    </action>
    <action name="forumAdminPageForm" type="org.digijava.module.forum.action.admin.SaveForumSection" validate="true" input="/showLayout.do?layout=forum_showForumAdminError" scope="request" path="/forum/adminSaveSection">
      <forward name="showForum" path="/forum/index.do" />
      <forward name="showAdminIndex" path="/forum/adminShowAdminIndex.do" redirect="true" />
    </action>
    <action name="forumAdminPageForm" type="org.digijava.module.forum.action.admin.MoveForumSection" scope="request" path="/forum/adminMoveSection">
      <forward name="showAdminIndex" path="/forum/adminShowAdminIndex.do" redirect="true" />
    </action>
    <action name="forumAdminPageForm" type="org.digijava.module.forum.action.admin.ShowAdminThread" scope="request" path="/forum/adminShowThread">
      <forward name="showAdminThread" path="/showLayout.do?layout=forum_showAdminThread" />
    </action>
    <action name="forumAdminPageForm" type="org.digijava.module.forum.action.admin.ShowAddForumSubsection" scope="request" path="/forum/adminShowAddSubsection">
      <forward name="subsectionDetails" path="/showLayout.do?layout=forum_showSubsectionDetails" />
    </action>
    <action name="forumAdminPageForm" type="org.digijava.module.forum.action.admin.ShowEditForumSubsection" scope="request" path="/forum/adminShowEditSubsection">
      <forward name="subsectionDetails" path="/showLayout.do?layout=forum_showSubsectionDetails" />
    </action>
    <action name="forumAdminPageForm" type="org.digijava.module.forum.action.admin.DeleteForumSubsection" scope="request" path="/forum/adminDeleteSubsection">
      <forward name="showAdminIndex" path="/forum/adminShowAdminIndex.do" redirect="true" />
    </action>
    <action name="forumAdminPageForm" type="org.digijava.module.forum.action.admin.SaveForumSubsection" validate="true" input="/showLayout.do?layout=forum_showForumAdminError" scope="request" path="/forum/adminSaveSubsection">
      <forward name="showForum" path="/forum/index.do" />
      <forward name="showAdminIndex" path="/forum/adminShowAdminIndex.do" redirect="true" />
    </action>
    <action name="forumAdminPageForm" type="org.digijava.module.forum.action.admin.MoveForumSubsection" scope="request" path="/forum/adminMoveSubsection">
      <forward name="showAdminIndex" path="/forum/adminShowAdminIndex.do" />
    </action>
    <action name="forumAdminPageForm" type="org.digijava.module.forum.action.admin.ShowAdminSubsection" scope="request" path="/forum/adminShowSubsection">
      <forward name="showAdminSubsection" path="/showLayout.do?layout=forum_showAdminSubsectionPage" />
    </action>
    <action name="forumAdminPageForm" type="org.digijava.module.forum.action.admin.DeleteForumThreads" scope="request" path="/forum/adminDeleteThreads">
      <forward name="showAdminIndex" path="/forum/adminShowAdminIndex.do" />
      <forward name="showAdminSubsection" path="/forum/adminShowSubsection.do" redirect="true" />
    </action>
    <action name="forumAdminPageForm" type="org.digijava.module.forum.action.admin.LockForumThreads" scope="request" path="/forum/adminLockThreads">
      <forward name="showAdminIndex" path="/forum/adminShowAdminIndex.do" />
      <forward name="showAdminSubsection" path="/forum/adminShowSubsection.do" redirect="true" />
    </action>
    <action name="forumAdminPageForm" type="org.digijava.module.forum.action.admin.UnlockForumThreads" scope="request" path="/forum/adminUnlockThreads">
      <forward name="showAdminIndex" path="/forum/adminShowAdminIndex.do" />
      <forward name="showAdminSubsection" path="/forum/adminShowSubsection.do" redirect="true" />
    </action>
    <action name="forumAdminPageForm" type="org.digijava.module.forum.action.admin.ShowMoveForumThreads" scope="request" path="/forum/adminShowMoveThreads">
      <forward name="showMoveDetails" path="/showLayout.do?layout=forum_showThreadMoveDetails" />
    </action>
    <action name="forumAdminPageForm" type="org.digijava.module.forum.action.admin.SaveForumThreads" validate="true" input="/showLayout.do?layout=forum_showForumAdminError" scope="request" path="/forum/adminSaveThreads">
      <forward name="showSubsection" path="/forum/adminShowSubsection.do" />
    </action>
    <action name="forumAdminPageForm" type="org.digijava.module.forum.action.admin.ShowTopicSplit" scope="request" path="/forum/adminShowTopicSplit">
      <forward name="showTopicSplit" path="/showLayout.do?layout=forum_showTopicSplit" />
    </action>
    <action name="forumPageForm" type="org.digijava.module.forum.action.ShowAddForumThread" scope="request" path="/forum/showAddThread">
      <forward name="threadDetails" path="/showLayout.do?layout=forum_showThreadDetails" />
    </action>
    <action name="forumPageForm" type="org.digijava.module.forum.action.SaveForumThread" validate="true" input="/showLayout.do?layout=forum_showForumError" scope="request" path="/forum/saveThread">
      <forward name="showSubsection" path="/forum/showSubsection.do" />
      <forward name="showAdminIndex" path="/forum/adminShowAdminIndex.do" />
      <forward name="showThread" path="/forum/showThread.do" />
    </action>
    <action name="forumPageForm" type="org.digijava.module.forum.action.AddForumPost" scope="request" path="/forum/addPost">
      <forward name="showThread" path="/forum/showThread.do" redirect="true" />
    </action>
    <action name="forumPageForm" type="org.digijava.module.forum.action.ShowEditForumPost" scope="request" path="/forum/showEditPost">
      <forward name="postDetails" path="/showLayout.do?layout=forum_showPostDetails" />
    </action>
    <action name="forumPageForm" type="org.digijava.module.forum.action.ShowPostPreview" scope="request" path="/forum/showPostPreview">
      <forward name="postDetails" path="/showLayout.do?layout=forum_showPostDetails" />
    </action>
    <action name="forumPageForm" type="org.digijava.module.forum.action.SaveForumPost" scope="request" path="/forum/savePost">
      <forward name="showThread" path="/forum/showThread.do" redirect="true" />
    </action>
    <action name="forumPageForm" type="org.digijava.module.forum.action.DeleteMessage" scope="request" path="/forum/deletePost">
      <forward name="showThread" path="/forum/showThread.do" redirect="true" />
    </action>
    <action name="forumPageForm" type="org.digijava.module.forum.action.admin.PublishForumPost" scope="request" path="/forum/publishPost">
      <forward name="showThread" path="/forum/showThread.do" redirect="true" />
    </action>
    <action name="forumAdminPageForm" type="org.digijava.module.forum.action.admin.ShowAdminIndex" scope="request" path="/forum/adminShowAdminIndex">
      <forward name="adminIndex" path="/showLayout.do?layout=forum_showAdminIndex" />
    </action>
    <action name="forumAdminPageForm" type="org.digijava.module.forum.action.admin.SplitTopic" scope="request" path="/forum/adminSplitTopic">
      <forward name="showThread" path="/forum/adminShowThread.do" />
      <forward name="showRoot" path="/forum/adminShowAdminIndex.do" />
    </action>
    <action name="forumPageForm" type="org.digijava.module.forum.action.ShowEditUserSettings" scope="request" path="/forum/showEditUserSettings">
      <forward name="userDetails" path="/showLayout.do?layout=forum_showUserDetails" />
    </action>
    <action name="forumPageForm" type="org.digijava.module.forum.action.ShowAddForumUser" scope="request" path="/forum/showAddForumUser">
      <forward name="userDetails" path="/showLayout.do?layout=forum_showUserDetails" />
    </action>
    <action name="forumPageForm" type="org.digijava.module.forum.action.SaveUserSettings" validate="true" input="/showLayout.do?layout=forum_showForumError" scope="request" path="/forum/saveUserSettings">
      <forward name="showForum" path="/forum/index.do" redirect="true" />
    </action>
    <action name="forumPageForm" type="org.digijava.module.forum.action.ShowUserDetails" scope="request" path="/forum/showUserDetails">
      <forward name="userDetails" path="/showLayout.do?layout=forum_viewUserDetails" />
    </action>
    <action type="org.digijava.module.forum.action.GetFile" scope="request" path="/forum/getFile" />
    <action name="forumPageForm" type="org.digijava.module.forum.action.ShowPMDetails" scope="request" path="/forum/showPmDetails">
      <forward name="showPmDetails" path="/showLayout.do?layout=forum_showPmDetails" />
    </action>
    <action name="forumPageForm" type="org.digijava.module.forum.action.SendPm" validate="true" input="/showLayout.do?layout=forum_showForumError" scope="request" path="/forum/sendPm">
      <forward name="showForum" path="/forum/index.do" redirect="true" />
      <forward name="showInbox" path="/forum/showInbox.do" redirect="no" />
    </action>
    <action name="forumPageForm" type="org.digijava.module.forum.action.AlertNewPm" scope="request" path="/forum/alertNewPm">
      <forward name="alertUserNewPm" path="/showLayout.do?layout=forum_alertUserNewPm" />
    </action>
    <action name="forumPageForm" type="org.digijava.module.forum.action.ShowUserInbox" scope="request" path="/forum/showInbox">
      <forward name="showInbox" path="/showLayout.do?layout=forum_inboxPage" />
    </action>
    <action name="forumPageForm" type="org.digijava.module.forum.action.ShowPm" scope="request" path="/forum/showPm">
      <forward name="showPm" path="/showLayout.do?layout=forum_pmPage" />
    </action>
    <action name="forumPageForm" type="org.digijava.module.forum.action.EditPm" scope="request" path="/forum/showEditPm">
      <forward name="showPmDetails" path="/showLayout.do?layout=forum_showPmDetails" />
    </action>
    <action name="forumPageForm" type="org.digijava.module.forum.action.MovePmToFolder" scope="request" path="/forum/movePmToFolder">
      <forward name="showFolder" path="/forum/showInbox.do" redirect="true" />
    </action>
    <action name="forumPageForm" type="org.digijava.module.forum.action.DeletePms" scope="request" path="/forum/deletePms">
      <forward name="showFolder" path="/forum/showInbox.do" redirect="true" />
    </action>
    <action name="forumPageForm" forward="/showLayout.do?layout=forum_showFindUser" scope="request" path="/forum/showFindUser" />
    <action name="forumPageForm" type="org.digijava.module.forum.action.FindUser" scope="request" path="/forum/findUser">
      <forward name="showFindUser" path="/forum/showFindUser.do" />
    </action>
  </action-mappings>
</struts-config>
