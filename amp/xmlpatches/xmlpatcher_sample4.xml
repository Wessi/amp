<?xml version="1.0" encoding="UTF-8"?>
<tns:patch closeOnSuccess="true" retryOnFail="true"
	xmlns:tns="http://docs.ampdev.net/schemas/xmlpatcher" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://docs.ampdev.net/schemas/xmlpatcher ../doc/xmlpatcher.xsd ">

	<jira>jira-3333</jira>
	<keyword>keyword</keyword>
	<author>author</author>
	<description>description</description>
	<trigger type="all">
		<condition type="appliedPatch">xmlpatcher_sample2.xml</condition>
		<condition type="dbName">amp_generic</condition>
		<condition type="custom">
			<script returnVar="y">
			<lang type="sql">SELECT count(*) from amp_activity</lang>
			</script>
			<test>y.intValue()==645</test>
		</condition>
		<condition type="custom">
			<script returnVar="x">
				<lang type="bsh">
  		import org.digijava.module.aim.dbentity.AmpActivity;
		result = (AmpActivity) session.get(AmpActivity.class, new Long(100898));
   		return new Integer(result.getName());
  		</lang>
			</script>
			<test>x.intValue()==100898</test>
		</condition>
	</trigger>
	<apply>
		<script>
			<lang type="sql">
   			UPDATE amp_activity set budget=false;
   		</lang>
		</script>
	</apply>

</tns:patch>
