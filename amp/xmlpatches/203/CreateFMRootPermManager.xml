<?xml version="1.0" encoding="UTF-8"?>
<tns:patch closeOnSuccess="false" retryOnFail="true" xmlns:tns="http://docs.ampdev.net/schemas/xmlpatcher" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://docs.ampdev.net/schemas/xmlpatcher ../doc/xmlpatcher.xsd ">
    <jira>AMP-9203</jira>
    <keyword>FM</keyword>
    <keyword>Root</keyword>
    <keyword>PermManager</keyword>
    <keyword>Permission</keyword>
    <author>Alexandru Artimon</author>
    <description>add fm root for PermManager</description>
    <trigger type="all">
      <condition  type="entryInTableMissing" tablename="amp_modules_visibility" columnname="name" columnvalue="/Permission Manager" />
    </trigger> 
       <apply>
        <script>
            <lang  delimiter=";" type="postgres">
            	delete from amp_modules_visibility where name like '/Permission Manager%';
                insert into amp_modules_visibility values (nextval('amp_modules_visibility_seq'), '/Permission Manager', '', true, null);
            </lang>
        </script>
    </apply>
</tns:patch>

