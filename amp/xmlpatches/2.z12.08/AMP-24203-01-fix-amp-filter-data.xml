<?xml version="1.0" encoding="UTF-8"?>
<tns:patch closeOnSuccess="true" retryOnFail="true"
    xmlns:tns="http://docs.ampdev.net/schemas/xmlpatcher" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://docs.ampdev.net/schemas/xmlpatcher ../doc/xmlpatcher.xsd ">
    <jira>AMP-24203</jira>
    <author>ociubotaru</author>
    <description>If Default Date Format is different from MM/dd/yyyy and dd/MM/yyyy then dates from amp_filter_data must be fixed manually.</description>
    <trigger type="all">
        <condition type="custom">
            <script returnVar="val">
                <lang type="sql">
                    SELECT settingsvalue FROM amp_global_settings where settingsname='Default Date Format';
                </lang>
            </script>
            <test><![CDATA[!val.equals("MM/dd/yyyy") && !val.equals("dd/MM/yyyy")]]></test>
        </condition>
    </trigger>
    <apply>
        <script returnVar="val">
            <lang delimiter=";" type="postgres">
                -- return nothing and fail the patch
            </lang>
        </script>
    </apply>
</tns:patch>
