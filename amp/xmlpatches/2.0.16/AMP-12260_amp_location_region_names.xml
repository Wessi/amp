<?xml version="1.0" encoding="UTF-8"?>
<tns:patch closeOnSuccess="true" retryOnFail="true"
	xmlns:tns="http://docs.ampdev.net/schemas/xmlpatcher" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://docs.ampdev.net/schemas/xmlpatcher ../doc/xmlpatcher.xsd ">
	<jira>AMP-12260</jira>
	<keyword>regions</keyword>
	<keyword>locations</keyword>
	<author>Alex</author>
	<description>Some location names appear wrong in reports by region</description>
	<trigger type="all">
		<condition type="custom">
			<script returnVar="db">
				<lang type="postgres">SELECT current_database()</lang>
			</script>
			<test>db.equalsIgnoreCase("amp_kosovo") || db.equalsIgnoreCase("amp_kosovo_staging")</test>
		</condition>
	</trigger>
	<apply>
		<script>
			<lang delimiter=";" type="postgres">
				UPDATE amp_location l SET region = cvl.location_name FROM  amp_category_value_location cvl   
					WHERE l.region_location_id=cvl.id AND l.region != cvl.location_name;
            </lang>
		</script>
	</apply>
</tns:patch>
