<?xml version="1.0" encoding="UTF-8"?>
<tns:patch closeOnSuccess="true" retryOnFail="true"
	xmlns:tns="http://docs.ampdev.net/schemas/xmlpatcher" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://docs.ampdev.net/schemas/xmlpatcher ../doc/xmlpatcher.xsd ">
	<jira>AMP-14447</jira>
	<keyword>Users</keyword>
	<!-- Make sure this patch runs ONLY AFTER AMP_14447! -->
	<author>Constantin Dolghier</author>
	<description>add an UNIQUE constraint to the users' email</description>
	<apply>
		<script>
			<lang delimiter=";" type="postgres">
				ALTER TABLE dg_user ADD CONSTRAINT unique_user_email UNIQUE(email);        	
			</lang>
		</script>
	</apply>
</tns:patch>
