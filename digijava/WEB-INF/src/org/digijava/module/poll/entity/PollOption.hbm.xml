<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping SYSTEM "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class name="org.digijava.module.poll.entity.PollOption" table="poll_option">
	  	<cache usage="read-write"/>
		<id name="pollOptionId" type="long" column="poll_option_id">
			<generator class="native">
				<param name="sequence">poll_option_seq</param>
			</generator>
		</id>
		<property name="name" column="name" type="string"/>
		<property name="votes" column="votes" type="long"/>
                <many-to-one name="poll" column="poll_id" class="org.digijava.module.poll.entity.Poll"/>
	</class>
</hibernate-mapping>
