<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class name="org.digijava.module.aim.dbentity.AmpComments" table="AMP_COMMENTS">
		<cache usage="read-write" />
		<id name="ampCommentId" column="amp_comment_id" type="java.lang.Long">
			<generator class="native">
				<param name="sequence">AMP_COMMENT_seq</param>
			</generator>
		</id>
		<property name="comment" column="comment"  type="org.digijava.kernel.db.SafeClobType"/>
		<property name="commentDate" column="comment_date" type="java.util.Date"/>

		<many-to-one name="ampActivityId" column="amp_activity_id" class="org.digijava.module.aim.dbentity.AmpActivity" cascade="none"/>
		<many-to-one name="ampFieldId" column="amp_field_id" class="org.digijava.module.aim.dbentity.AmpField" cascade="none"/>
		<many-to-one name="memberId" column="member_id" class="org.digijava.module.aim.dbentity.AmpTeamMember" cascade="none"/>				
	</class>
</hibernate-mapping>
