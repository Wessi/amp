<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class name="org.digijava.module.aim.dbentity.AmpComponent" table="AMP_COMPONENTS">
		<cache usage="read-write"/>
		
		<id name="ampComponentId" column="amp_component_id" type="java.lang.Long">
			<generator class="native">
				<param name="sequence">AMP_COMPONENTS_seq</param>
			</generator>
		</id>
		
		<property column="title" name="title" type="java.lang.String"/>
		<property column="description" name="description" type="org.digijava.kernel.db.SafeClobType" />
		<property column="reporting_date" name="reportingDate" type="java.util.Date" />
		<property column="amount" name="amount" type="java.lang.Double"/>		
		
		<many-to-one name="activity" column="amp_activity_id" 
		class="org.digijava.module.aim.dbentity.AmpActivity" cascade="none"/>
		<many-to-one name="currency" column="currency_id" 
		class="org.digijava.module.aim.dbentity.AmpCurrency" cascade="none"/>
		
		<set name="physicalProgress" cascade="delete" inverse="true">
			<cache usage="read-write" />
			<key column="amp_component_id"/>
			<one-to-many class="org.digijava.module.aim.dbentity.AmpPhysicalPerformance"/>
		</set>
		
	</class> 
</hibernate-mapping>