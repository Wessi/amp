<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class name="org.digijava.module.forum.dbentity.ForumSubsection" table="DG_FORUM_SUBSECTION">
		<cache usage="read-write"/>
		<id column="ID" name="id" type="long" unsaved-value="0">
			<generator class="native">
				<param name="sequence">dg_forum_subsection_seq</param>
			</generator>
		</id>
		<many-to-one name="section" column="SECTION" class="org.digijava.module.forum.dbentity.ForumSection" cascade="save-update"/>
		<property name="orderIndex" column="ORDER_INDEX" type="int"/>
		<property name="title" column="SUBSECTION_TITLE" type="java.lang.String"/>
		<property name="comment" column="SUBSECTION_COMMENT" type="java.lang.String"/>
		<property name="creationDate" column="CREATION_DATE" type="java.util.Date"/>
		<!--<property name="threadCount" column="THREAD_COUNT" type="int"/>-->
		<property name="totalPosts" column="TOTAL_POSTS" type="int"/>
		<property name="locked" column="LOCKED" type="boolean"/>
		<property name="requiresPublishing" column="REQUIRES_PUBLISHING" type="boolean"/>
		<property name="sendApproveMsg" column="SEND_APPROVE" type="boolean"/>
		<property name="approveMsg" column="APPROVE_MSG" type="java.lang.String"/>
		<property name="sendDeleteMsg" column="SEND_DELETE" type="boolean"/>
		<property name="deleteMsg" column="DELETE_MSG" type="java.lang.String"/>

		<many-to-one name="lastPost" column="LAST_POST" class="org.digijava.module.forum.dbentity.ForumPost" cascade="all"/>

		<set lazy="true" name="threads" cascade="all" order-by="LAST_POST_DATE asc" inverse="true">
			<key column="SUBSECTION"/>
			<one-to-many class="org.digijava.module.forum.dbentity.ForumThread"/>
		</set>
	</class>
</hibernate-mapping>
