<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
  <form-beans>
    <form-bean name="exceptionReportForm" type="org.digijava.module.exception.form.DigiExceptionReportForm" />
  </form-beans>

	<global-exceptions>
	        <exception type="java.lang.Exception" key="errors.general" 
        	    handler="org.digijava.kernel.exception.ActionExceptionHandler" />
	</global-exceptions>

  <action-mappings>
		<action type="org.digijava.kernel.action.ShowLayout" path="/exception/showLayout" />
		<action name="exceptionReportForm" type="org.digijava.kernel.exception.DigiExceptionHandler" validate="false" path="/exceptionHandle" scope="session" />
		<action name="exceptionReportForm" type="org.digijava.module.exception.action.ExceptionReport" input="/exception/exceptionReport" path="/exception/exceptionReport" scope="session"/>
		<action name="exceptionReportForm" type="org.digijava.module.exception.action.ShowExceptionReport" input="/exception/showExceptionReport" path="/exception/showExceptionReport" />
  </action-mappings>
</struts-config>
