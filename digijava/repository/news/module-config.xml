<?xml version="1.0"?>
<module-config>
	<name>news</name>
	<security>
  		<action login-required="true" pattern="/showCreateNewsItem" />
		<action login-required="true" pattern="/createNewsItem" />
		<action login-required="true" pattern="/viewUserNews" />
		<action login-required="true" pattern="/showEditNewsItem" />
		<action login-required="true" pattern="/editNewsItem" />
		<action login-required="true" pattern="/previewNewsItem" />
		<action pattern="/confirmNewsItems">ADMIN</action>
		<action pattern="/updateConfirmNewsItems">ADMIN</action>
		<action pattern="/showNewsItemSettings">ADMIN</action>
		<action pattern="/updateNewsItemSettings">ADMIN</action>
		<action pattern="/showNewsItems">ADMIN</action>
		<action pattern="/translateSpecial">WRITE,TRANSLATE</action>
		
		<!-- syndication -->	
		<action pattern="/collectorFeedList">ADMIN</action>
		<action pattern="/showCreateNewFeed">ADMIN</action>
		<action pattern="/confirmNewFeed">ADMIN</action>
		<action pattern="/createNewFeed">ADMIN</action>
		<action pattern="/publishedFeedList">ADMIN</action>
		<action pattern="/managePublishedFeed">ADMIN</action>
		<action pattern="/showCreateNewPublishFeed">ADMIN</action>
		<action pattern="/showEditNewPublishFeed">ADMIN</action>
		<action pattern="/confirmNewPublishFeed">ADMIN</action>
		<action pattern="/createNewPublishFeed">ADMIN</action>
		<action pattern="/editNewPublishFeed">ADMIN</action>

 	</security>

        <action pattern="/showNewsItemDetails" questionMarkPosition="3" hideAfterQMark="true" identity-pattern="{activeNewsItem}" identity-type="news">
	  <param name="activeNewsItem" />
	  <param name="foo" />
	  <param name="unamed1" />
	</action>
	<action pattern="/viewUserNews">
	  <param name="all" />
	</action>
	<action pattern="/confirmNewsItems">
	  <param name="activeNewsItem" />
	</action>
	<action pattern="/showEditNewsItem">
	  <param name="activeNewsItem" />
	</action>
	<action pattern="/editNewsItem">
	  <param name="activeNewsItem" />
	</action>
	<action pattern="/previewNewsItem">
	  <param name="activeNewsItem" />
	</action>
	<action pattern="/showNewsItems">
	  <param name="status" />
	</action>


	<!-- news classes Begin -->
	<hibernate-classes required="false">
		<hibernate-class>org.digijava.module.news.dbentity.News</hibernate-class>
		<hibernate-class>org.digijava.module.news.dbentity.NewsItem</hibernate-class>
		<hibernate-class>org.digijava.module.news.dbentity.NewsSettings</hibernate-class>
	</hibernate-classes>
	<!-- news classes End -->

</module-config>
