<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping SYSTEM "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class name="org.digijava.module.poll.entity.Poll" table="poll">
	  	<cache usage="read-write"/>
		<id name="pollId" type="long" column="poll_id">
			<generator class="native">
				<param name="sequence">poll_seq</param>
			</generator>
		</id>
		<property name="question" column="question" type="string"/>
		<property name="instanceKey" column="instance_key" type="string"/>

                <set name="pollOptions" cascade="all">
                <key column="poll_id"/>
                <one-to-many class="org.digijava.module.poll.entity.PollOption"/>
                </set>

                <set name="pollVoters" cascade="all">
                <key column="poll_id"/>
                <one-to-many class="org.digijava.module.poll.entity.PollVoter"/>
                </set>

	</class>
</hibernate-mapping>
