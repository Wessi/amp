<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>

	<class name="org.digijava.module.news.dbentity.News" table="DG_NEWS">
	  	<!--<cache usage="read-write"/>-->
		<id column="ID" name="id" type="java.lang.Long" unsaved-value="null">
			<generator class="native">
				<param name="sequence">dg_news_seq</param>
			</generator>
		</id>

		<property name="siteId" column="SITE_ID"  type="java.lang.String"/>
		<property name="instanceId" column="MODULE_INSTANCE_ID"  type="java.lang.String"/>
		<many-to-one name="status" column="STATUS" class="org.digijava.module.common.dbentity.ItemStatus" cascade="none"/>
		<property name="country" column="COUNTRY_ISO"  type="java.lang.String"/>
		<property name="sourceName"   column="SOURCE_NAME"  type="java.lang.String"/>
		<property name="sourceUrl"    column="SOURCE_URL"  type="java.lang.String"/>
		<property name="releaseDate"  column="RELEASE_DATE"  type="java.util.Date"/>
		<property name="archiveDate"  column="ARCHIVE_DATE"  type="java.util.Date"/>
		<property name="enableHTML"   column="ENABLE_HTML"  type="boolean" />
		<property name="enableSmiles" column="ENABLE_SMILES"  type="boolean"/>
                <property name="syndication" column="SYNDICATION"  type="boolean"/>

		<set name="newsItem" cascade="all" inverse="true">
		<!--<cache usage="read-write"/>-->
			<key column="NEWS_ID"/>
			<one-to-many class="org.digijava.module.news.dbentity.NewsItem"/>
		</set>

	</class>

</hibernate-mapping>