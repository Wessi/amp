<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class name="org.digijava.module.gateperm.core.Permission"
		table="PERM_PERMISSION">
		<cache usage="read-write" />
		<id name="id" column="id" type="java.lang.Long" unsaved-value="null">
			<generator class="native">
				<param name="sequence">permission_seq_id</param>
			</generator>
		</id>

			<set name="compositeLinkedPermissions" table="PERM_COMP_PERMISSION_MAP" inverse="true">
				<key column="linked_perm_id" />
				<many-to-many
					class="org.digijava.module.gateperm.core.Permission"
					column="perm_id" />
			</set>


		<property name="name" column="name" type="java.lang.String" />
		<property name="description" column="description" length="2000"
			type="java.lang.String" />

		<joined-subclass
			name="org.digijava.module.gateperm.core.GatePermission"
			table="PERM_GATE_PERMISSION">
			<key column="perm_id" />
			
			<property name="gateTypeName" column="gate_type_name" type="java.lang.String" />
			
			<list name="gateParameters" table="PERM_GATE_PARAMETER" cascade="all">
				<key column="perm_id" />
				<index column="index_column" />
				<element column="parameter" type="string" />				
			</list>

			<set name="actions" table="PERM_GATE_ACTION" cascade="all">
				<key column="perm_id" />
				<element column="action_name" type="string" />				
			</set>

		</joined-subclass>

		<joined-subclass
			name="org.digijava.module.gateperm.core.CompositePermission"
			table="PERM_COMP_PERMISSION">
			<key column="perm_id" />
			<set name="permissions" table="PERM_COMP_PERMISSION_MAP" cascade="save-update">
				<cache usage="read-write" />
				<key column="perm_id" />
				<many-to-many
					class="org.digijava.module.gateperm.core.Permission"
					column="linked_perm_id" />
			</set>

		</joined-subclass>

	</class>

</hibernate-mapping>