<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class name="org.digijava.module.forum.dbentity.Forum" table="DG_FORUM">
		<cache usage="read-write"/>
		<id column="ID" name="id" type="long" unsaved-value="0">
			<generator class="native">
				<param name="sequence">dg_forum_seq</param>
			</generator>
		</id>
		<property name="siteId" column="SITE_ID" type="java.lang.String"/>
		<property name="instanceId" column="INSTANCE_ID" type="java.lang.String"/>
		<property name="name" column="FORUM_NAME" type="java.lang.String"/>
		<property name="topicsPerPage" column="TOPICS_PER_PAGE" type="int"/>
		<property name="postsPerPage" column="POSTS_PER_PAGE" type="int"/>
		<property name="systemTimezone" column="SYSTEM_TIMEZONE" type="int"/>
		<property name="minMessageLength" column="MIN_MESSAGE_LENGTH" type="int"/>
		<property name="maxImageSize" column="MAX_IMAGE_SIZE" type="int"/>
		<property name="maxImageWidth" column="MAX_IMAGE_WIDTH" type="int"/>
		<property name="maxImageHeigth" column="MAX_IMAGE_HEIGHT" type="int"/>
		<property name="maxUploadSize" column="MAX_UPLOAD_SIZE" type="int"/>
		<property name="postIntervalLimit" column="POST_INTERVAL_LIMIT" type="int"/>
		<property name="allowUnregisteredUserPost" column="ALLOW_UNREGISTERED_USER_POST" type="boolean"/>
<!--
		<set name="sections" cascade="all" inverse="true">
			<key column="FORUM"/>
			<one-to-many class="org.digijava.module.forum.dbentity.ForumSection"/>
		</set>
-->

		<set name="sections" cascade="all-delete-orphan" order-by="ORDER_INDEX asc" inverse="true">
			<key column="FORUM"/>
			<one-to-many class="org.digijava.module.forum.dbentity.ForumSection"/>
		</set>

	</class>
</hibernate-mapping>
