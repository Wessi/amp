<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class name="org.digijava.module.cms.dbentity.CMSCategory" table="DG_CMS_CATEGORY">
        <cache usage="read-write"/>
		<id column="CATEGORY_ID" name="id" type="long" unsaved-value="0">
			<generator class="native">
				<param name="sequence">dg_cms_category_seq</param>
			</generator>
		</id>
		<property name="name" column="NAME" type="java.lang.String"/>
		<property name="scopeNote" column="SCOPE_NOTE" type="java.lang.String"/>
		<property name="submissionDate" column="SUBMISSION_DATE" type="java.util.Date" />
		<many-to-one name="primaryParent" column="PRIMARY_CATEGORY" class="org.digijava.module.cms.dbentity.CMSCategory" cascade="none"/>
		<many-to-one name="owner" column="OWNER_CMS" class="org.digijava.module.cms.dbentity.CMS" cascade="none"/>
		<set name="parentCategories" table="DG_CMS_CATEGORY_PARENT_MAP" cascade="save-update">
	          	<key column="CHILD_ID"/>
	        	<many-to-many class="org.digijava.module.cms.dbentity.CMSCategory" column="PARENT_ID"/>
		</set>
		<set name="childCategories" table="DG_CMS_CATEGORY_PARENT_MAP" cascade="save-update">
	          	<key column="PARENT_ID"/>
	        	<many-to-many class="org.digijava.module.cms.dbentity.CMSCategory" column="CHILD_ID"/>
		</set>
		<set name="relatedCategories" table="DG_CMS_CATEGORY_RELATED_MAP">
			<key column="ID"/>
			<many-to-many class="org.digijava.module.cms.dbentity.CMSCategory" column="CATEGORY_ID"/>
		</set>
		<set name="primaryChildCategories" cascade="all" inverse="true">
			<key column="PRIMARY_CATEGORY"/>
			<one-to-many class="org.digijava.module.cms.dbentity.CMSCategory"/>
		</set>
		<set name="contentItems" table="DG_CMS_ITEM_CATEGORY_MAP" cascade="all" lazy="true">
          	        <key column="CATEGORY_ID"/>
	        	<many-to-many class="org.digijava.module.cms.dbentity.CMSContentItem" column="ID"/>
		</set>
	</class>
</hibernate-mapping>