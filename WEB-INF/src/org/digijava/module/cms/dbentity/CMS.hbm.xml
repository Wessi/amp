<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
<hibernate-mapping>
	<class name="org.digijava.module.cms.dbentity.CMS" table="DG_CMS">
		<cache usage="read-write"/>
		<id column="ID" name="id" type="long" unsaved-value="0">
			<generator class="native">
				<param name="sequence">dg_cms_seq</param>
			</generator>
		</id>
		<property name="siteId" column="SITE_ID" type="java.lang.String"/>
		<property name="instanceId" column="INSTANCE_ID" type="java.lang.String"/>

		<property name="moderated" column="MODERATED" type="boolean"/>
		<property name="privateMode" column="PRIVATE_MODE" type="boolean"/>

		<property name="sendApproveMsg" column="SEND_APPROVE" type="boolean"/>
		<property name="approveMsg" column="APPROVE_MSG" type="java.lang.String"/>

		<property name="sendRejectMsg" column="SEND_REJECT" type="boolean"/>
		<property name="rejectMsg" column="REJECT_MSG" type="java.lang.String"/>

		<property name="sendRevokeMsg" column="SEND_REVOKE" type="boolean"/>
		<property name="revokeMsg" column="REVOKE_MSG" type="java.lang.String"/>

<!--
		<set name="topLevelCategories" cascade="all" inverse="true">
			<key column="OWNER_CMS"/>
			<one-to-many class="org.digijava.module.cms.dbentity.CMSCategory"/>
		</set>
-->

	</class>
</hibernate-mapping>