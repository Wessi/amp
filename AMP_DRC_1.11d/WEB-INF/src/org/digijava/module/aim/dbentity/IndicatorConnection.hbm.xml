<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 2.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">
	<hibernate-mapping>
		<class name="org.digijava.module.aim.dbentity.IndicatorConnection" table="AMP_INDICATOR_CONNECTION" discriminator-value="c">
			<id name="id" column="id" type="java.lang.Long">
				<generator class="native">
					<param name="sequence">AMP_INDICATOR_CONNECTION_seq</param>
				</generator>
			</id>
			
			<discriminator column="sub_clazz" force="true"/>
			
			<many-to-one name="indicator" column="indicator_id" class="org.digijava.module.aim.dbentity.AmpIndicator" cascade="none"/>
		
			<set name="values" lazy="true" inverse="true" cascade="all-delete-orphan">
				<key column="ind_connect_id"/>
				<one-to-many class="org.digijava.module.aim.dbentity.AmpIndicatorValue"/>
			</set>

			<subclass name="org.digijava.module.aim.dbentity.IndicatorTheme" discriminator-value="p">
				<many-to-one name="theme" column="theme_id" class="org.digijava.module.aim.dbentity.AmpTheme" cascade="none"/> 
			</subclass>			

			<subclass name="org.digijava.module.aim.dbentity.IndicatorActivity" discriminator-value="a">
				<many-to-one name="activity" column="activity_id" class="org.digijava.module.aim.dbentity.AmpActivity" cascade="none"/> 
				<many-to-one name="risk" column="risk" 	class="org.digijava.module.aim.dbentity.AmpIndicatorRiskRatings" cascade="none"/>
			</subclass>			

			<subclass name="org.digijava.module.aim.dbentity.IndicatorSector" discriminator-value="s">
				<many-to-one name="sector" column="sector_id" class="org.digijava.module.aim.dbentity.AmpSector" cascade="none"/>
				<many-to-one name="location" column="location_id" class="org.digijava.module.aim.dbentity.AmpLocation"/> 
			</subclass>
			
				
	</class>
</hibernate-mapping>