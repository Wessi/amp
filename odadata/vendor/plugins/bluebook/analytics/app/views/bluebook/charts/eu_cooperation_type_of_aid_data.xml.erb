<?xml version="1.0" encoding="UTF-8"?>
<chart>
	<series>
		<% translate_options(Project::TYPE_OF_AID_OPTIONS).each do |name, id| %>
			<value xid="<%= id %>"><%= name %></value>
		<% end %>
	
	</series>
	
	<graphs>	
		<graph gid="1" title="<%= ll(:terms, :disbursements) %> <%= Time.now.year - 1 %>" color="#0000FF">
			<% translate_options(Project::TYPE_OF_AID_OPTIONS).each do |name, id| %>
				<value xid="<%= id %>"><%= @aid_payments[id].in_millions(2) rescue 0 %></value>
			<% end %>
		</graph>
		
		<graph gid="2" title="<%= ll(:charts, :legends, :disbursements_forecast) %> <%= Time.now.year %>" color="#00FFFF">
			<% translate_options(Project::TYPE_OF_AID_OPTIONS).each do |name, id| %>
				<value xid="<%= id %>"><%= @aid_forecasts[id].in_millions(2) rescue 0 %></value>
			<% end %>
		</graph>
	</graphs>
</chart>