<table class="bluebook">
	<tr>
		<td width=20% valign=top>
			<% unless @donor.profile_picture.url(:regular).include?('missing.png') %>
				<%= image_tag @donor.profile_picture.url(:regular) %>
			<% end%>
			
			<br><br><br>
			<center>
			<% if @donor.flag.url(:regular).include?('missing.png') %>
				<img src="/flags/missing/regular/missing.png" alt="missing.png" width="80" height="54"/>
			<% else %>
				<%= image_tag @donor.flag.url(:regular) %>
			<% end%><br><br>
			<font size="3"><b><%= @donor.name %></b></font>
			</center>
		</td>
		<td width=40% valign=top>
			<strong>Institutional Framework</strong></br>
			<table>
				<tr>
					<td>Management System for ODA</td>
					<td><%= @donor.institutions_responsible_for_oda %></td>
				</tr>
				<tr>
					<td>Total Staff in Nicaragua</td>
					<td><%= @donor.donor_details.find_by_year(year).total_staff_in_country %></td>
				</tr>
				<tr>
					<td>Total Expatriate Staff</td>
					<td><%= @donor.donor_details.find_by_year(year).total_expatriate_staff %></td>
				</tr>
				<tr>
					<td>Total Local Staff</td>
					<td><%= @donor.donor_details.find_by_year(year).total_local_staff %></td>
				</tr>
				<tr>
					<td colspan=2>
						<strong>Contact</strong><br>
						<%= @donor.field_office_address %>
						Tel: <%= @donor.field_office_phone %>
						<br>
						<%= auto_link(@donor.field_office_email) %>
						<%= auto_link(@donor.field_office_website) %>
					</td>
				</tr>
			</table>
		</td>
		<td width=40% valign=top>
			<strong>Aid in Nicaragua at a Glance in <%= year %></strong>
			<table>
				<tr>
					<td>Disbursements / EU Disbursements </td>
					<td><%= @disbursement.round %> %</td>
				</tr>
				<tr>
					<td>Grant ODA / Total ODA</td>
					<td><%= @disbursement_grants.round %> %</td>
				</tr>
				<tr>
					<td>Loan ODA / Total ODA</td>
					<td><%= @disbursement_loans.round %> %</td>
				</tr>
			</table>
			<br />
			<strong>ODA Breakdown</strong>
			<table>
				<tr>
					<td>Multilateral ODA / Total ODA</td>
					<td><%= @disbursement_multilaterals.round %> %</td>
				</tr>
				<tr>
					<td>Bilateral ODA / Total ODA</td>
					<td><%= @disbursement_bilaterals.round %> %</td>
				</tr>
				<tr>
					<td>Support to NGOs / Total ODA</td>
					<td><%= @disbursement_ngos.round %> %</td>
				</tr>
				<tr>
					<td>Top 3 Regions</td>
					<td>
						<% if @top_three.blank? %>
							<i>Only national activities.</i>
						<% else %>
							<%= format_as_html_list(@top_three.map { |data| "-&nbsp;#{data.province.name}" }) %>
						<% end %>
					</td>
				</tr>
			</table>
		</td>
	</tr>
	<tr>
		<td width=40% valign=top colspan=2>
			<b>Degree of Centralisation</b><br>
			<table>
				<tr>
					<td>Programming Responsibility</td>
					<td><%= option_text_by_id(CountryStrategy::RESPONSIBILITY_OPTIONS, @country_strategy.andand.programming_responsibility) %></td>
				<tr>
				<tr>
					<td>Project Appraisal and Approval</td>
					<td><%= option_text_by_id(CountryStrategy::RESPONSIBILITY_OPTIONS, @country_strategy.andand.project_appraisal_responsibility) %></td>
				</tr>
				<tr>
					<td>Tenders Responsibility</td>
					<td><%= option_text_by_id(CountryStrategy::RESPONSIBILITY_OPTIONS, @country_strategy.andand.tenders_responsibility) %></td>
				</tr>
				<tr>
					<td>Commitments and Disbursements</td>
					<td><%= option_text_by_id(CountryStrategy::RESPONSIBILITY_OPTIONS, @country_strategy.andand.commitments_and_payments_responsibility) %></td>
				</tr>
				<tr>
					<td>Monitoring and Evaluation</td>
					<td><%= option_text_by_id(CountryStrategy::RESPONSIBILITY_OPTIONS, @country_strategy.andand.monitoring_and_evaluation_responsibility) %></td>
				</tr>
			</table>
			<b>Preferred approaches for aid delivery</b>
			<table>
				<tr>
					<td>Commitment to budget support</td>
					<td><%= @country_strategy.andand.commitment_to_budget_support %> %</td>
				</tr>
				<tr>
					<td>Commitment to sector-wide approaches</td>
					<td><%= @country_strategy.andand.commitment_to_sectorwide_approaches_and_common_funds %> %</td>
				</tr>
				<tr>
					<td>Commitment to projects</td>
					<td><%= @country_strategy.andand.commitment_to_projects %> %</td>
				</tr>
			</table>
			<b>Programming priorities</b>
			<table style="width: 100%">
				<tr>
					<td>Country Strategy Paper</td>
					<td><%= @country_strategy.andand.strategy_paper ? "yes" : "no"</td>
				</tr>
				<tr>
					<td>Period covered</td>
					<td><%= @country_strategy.andand.start.andand.year %>-<%= @country_strategy.andand.end.andand.year %></td>
				</tr>
				<tr>
					<td> Amount Foreseen</td>
					<td><%= null_to_na(@country_strategy.andand.total_amount_foreseen) %></td>
				</tr>
				<tr>
					<td>Internet link</td>
					<td><%= auto_link(@country_strategy.andand.website, :all, :target => "_blank") %></td>
				</tr>
				<tr>
					<td valign="top">Focal Sectors and their Regions</td>
					<td>
						<%= render :partial => "/country_strategies/focal_sectors" %>			
					</td>
				</tr>
			</table>
		</td>
		<td width=40% valign=top>
			<div style="width: 100%; text-align: left; padding-top: 4px"><%= render :partial => '/layouts/currency_selector' %></div>
			<table>
				<tr>
					<td><b>Disbursements (<%= "#{MultiCurrency.output_currency}" %>, in Millions )</b>
						<table>
							<tr>
								<td class="title" value="fleco">
                                </td>
  <%
  (Project::FIRST_YEAR_OF_RELEVANCE..year).to_a.map do |y|
  %>
								<td class="title"><%=y%></td>
  <%
  end
  %>
								<td class="title"><%=year+1%> * </td>
							</tr>
							<tr>
								<td class="sub_title">Grant></td>
  <%
  (Project::FIRST_YEAR_OF_RELEVANCE..year).to_a.map do |y|
  %>
								<td><%= in_millions(@total_payments_grants[y]) %></td>
  <%
  end
  %>
								<td><%= in_millions(@total_forecasts_grants) %></td>
							</tr>
							<tr>
								<td class="sub_title">Loan</td>
  <%
  (Project::FIRST_YEAR_OF_RELEVANCE..year).to_a.map do |y|
  %>
								<td><%= in_millions(@total_payments_loans[y])  %></td>
  <%
  end
  %>
								<td><%= in_millions(@total_forecasts_loans)  %></td>
							</tr>
                            <tr>
								<td class="sub_title">Total</td>
  <%
  (Project::FIRST_YEAR_OF_RELEVANCE..year).to_a.map do |y|
  %>
								<td><%= in_millions(@total_payments_grants[y] + @total_payments_loans[y]) %></td>
  <%
  end
  %>
								<td><%= in_millions(@total_forecasts_grants + @total_forecasts_loans) %></td>
							</tr>
						</table>
						*&nbsp;Forecasts
					</td>
				</tr>
				<tr>
					<td>
						<div id="sectors_chart">
							<strong>Please download Flash Player 8.0 or higher from <a href="http://www.adobe.com">adobe.com</a>
									in order to view this chart.</strong>
						</div>
						<br><%= reports_link_to "Click here for enlarged chart", 
									:controller => 'charts', :action => 'sectors_chart', :id => @donor, :year => year %>
									
						<script type="text/javascript">
						// <![CDATA[
							var flashvars = {
								path: "/",
								settings_file: escape("/bluebook/<%= year %>/charts/settings/sectors_graph.xml"),
								data_file: escape("/bluebook/<%= year %>/charts/sectors_chart_data/<%= @donor.id %>.xml"),
								preloader_color: "#999999"
							};

							swfobject.embedSWF("/ampie.swf", "sectors_chart", "280", "250", "8.0.0", false, flashvars, { wmode: "transparent"	}, false);
						// ]]>
						</script>
					</td>
				</tr>
			</table>
			
		</td>
	</tr>	
</table>

<table class="bluebook">
	<tr>
		<td class="sub_title"><b><%= @donor.name %></b> - Current Country Strategy</td>
	</tr>
	<tr>
		<td><b><%= @country_strategy.andand.strategy_number %></b></td>
	</tr>
	<tr>
		<td><%= markdown(@country_strategy.description) unless @country_strategy.nil? %></td>
	</tr>
</table>