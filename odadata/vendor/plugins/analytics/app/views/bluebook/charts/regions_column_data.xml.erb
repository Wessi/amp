<chart>
	<series>
		<% @province_totals.map(&:province).uniq.reverse.each do |province| %>
			<value xid="<%= province.id %>"><%= province.name %></value>
		<% end%>
	</series>
	
	<graphs>
	<% @province_payments.group_by(&:donor).each_with_index do |(donor, payments), idx| %>
		<graph gid="<%= donor.id %>" title="<%= donor.name %>" color="<%= Settings::COLOR_SCHEME[idx] %>">
			<% payments.each do |sp| %>
				<value xid="<%= sp.province.id %>"><%= sp.payments.to_i %></value>
			<% end %>
		</graph>
	<% end %>
	</graphs>
</chart>
