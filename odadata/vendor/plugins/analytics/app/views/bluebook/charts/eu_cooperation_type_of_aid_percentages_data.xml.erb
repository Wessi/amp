<?xml version="1.0" encoding="UTF-8"?>
<chart>
	<series>
		<% @donors.each do |donor| %>
			<value xid="<%= donor.id %>"><%= donor.name %></value>
		<% end %>
	
	</series>
	
	<graphs>
		<% translate_options(Project::TYPE_OF_AID_OPTIONS).each do |name, id| %>
			<graph gid="<%= id %>" title="<%= name %>" color="<%= Settings::COLOR_SCHEME[id] %>">
				<% @donors.each do |donor| %>
					<value xid="<%= donor.id %>"><%= @aid_payments[donor.id][id].in_millions(2) rescue 0 %></value>
				<% end %>
			</graph>
		<% end %>
	</graphs>
</chart>