<chart>
	<series>
		<% @sector_totals.map(&:dac_sector).uniq.reverse.each do |sector| %>
			<value xid="<%= sector.id %>"><%= sector.name_with_code %></value>
		<% end%>
	</series>
	
	<graphs>
	<% @sector_payments.group_by(&:donor).each_with_index do |(donor, payments), idx| %>
		<graph gid="<%= donor.id %>" title="<%= donor.name %>" color="<%= Settings::COLOR_SCHEME[idx] %>">
			<% payments.each do |sp| %>
				<value xid="<%= sp.dac_sector.id %>"><%= sp.payments.to_i %></value>
			<% end %>
		</graph>
	<% end %>
	</graphs>
</chart>
