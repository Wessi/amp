<chart>
<series>
	<% @totals.each do |sector, amount| %>
		<value xid="<%= sector.id %>"><%= sector.name_with_code %></value>
	<% end%>
</series>

<graphs>
<% @sector_payments.each_with_index do |(donor, sectors), idx| %>
	<graph gid="<%= donor %>" title="<%= donor %>" color="<%= Settings::COLOR_SCHEME[idx] %>">
		<% sectors.each do |sector, amount| %>
			<value xid="<%= sector.id %>"><%= amount.in(Prefs.default_currency).in_millions(2).to_s %></value>
		<% end %>
	</graph>
<% end %>
</graphs>
</chart>
