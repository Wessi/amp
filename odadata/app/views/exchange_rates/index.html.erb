<h2><%= header t('.title', :source => ExchangeRate.human_option_name(:source, @source)) %></h2>

<table>
	<% if @exchange_rates.blank? %>
		<tr><td class="empty"><%= t('.empty') %></td></tr>
	<% else %>
		<% @exchange_rates.each do |year, rates| %> 
			<tr>
				<th colspan="3"><%= year %></td>
			</tr>

			<tr>
				<th><%= ExchangeRate.human_attribute_name('currency') %></th>
				<th><%= ExchangeRate.human_attribute_name('euro_rate') %></th>
				<% restrict_to 'admin' do %>
					<th> </th>
				<% end %>
			</tr>
			<% rates.sort_by(&:currency).each do |rate| %>
				<tr>			
					<td><%= rate.currency %></td>
					<td><%= rate.euro_rate %></td>
					<% restrict_to 'admin' do %>
						<td><%= link_to t('.edit'), edit_exchange_rate_path(rate) %></td>
					<% end %>
				</tr>
			<% end %>
		<% end %>
	<% end %>
</table>
	
<% restrict_to 'admin' do %>
	<p><b><%= link_to t('.new'), new_exchange_rate_path(:source => @source) %></b></p>
<% end %>