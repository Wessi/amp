<div class="cofunding" style="padding: 20px 0 5px 10px; border-bottom:1px dashed #CCCCCC;">
	<%= f.hidden_field :donor_type, :value => "Donor" %>
	
  <%= f.collection_select :donor_id, Donor.ordered, :id, :name, 
          { :prompt => ll(:options, :prompt), :label => "Co-Funding Donor" }, :class => 'large donors' %>

  <%= f.text_field :amount, :size => 20, :value => f.object.amount.to_s(false) %>
  <%# Alex C. wanted us to remove this.. Still not sure about whether it actually looks better without %>
  <%# f.label :currency, Cofunding.human_attribute_name('in'), :class => "fluid" %>
  <%= f.select :currency, ExchangeRate.available_currencies_for_select, :label => false %>
    
  <%= f.remove_link t('actions.delete') %>
</div>
