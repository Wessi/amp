<% odaform_for @project do |f| %>
	<table>
		<%= f.collection_select :donor_agency_id, @project.donor.agencies, "id", "name", 
								:required => true, :prompt => I18n.t('options.prompt') %>
		
		<%= f.text_field :donor_project_number, :required => true %>
		<%= f.text_field :oecd_number %>
		<%= f.text_field :recipient_country_budget_nr %>
		<%= f.text_field :title, :required => true %>
		<%= f.text_area  :description, :required => true %>
		
		<%= f.collection_select :country_strategy_id, @project.donor.country_strategies, "id", "strategy_number",
		 						:prompt => I18n.t('options.country_strategy_unavailable') %>
		<%= f.select 			:prj_status, Project::STATUS_OPTIONS, 
					 			:include_blank => I18n.t('options.prompt'), :required => true %>
    	
		<%= f.date_select :start, :start_year=>1995, :end_year=>Time.now.year+15, 
						  :default => { :day => 1, :month => 1, :year => 1995 }, :required => true %>
		<%= f.date_select :end, :start_year=>1995, :end_year=>Time.now.year+15, 
						  :default => { :day => 1, :month => 1, :year => 1995 }, :required => true %>
		
		<%= render :partial => 'control_buttons' %>
	</table>
<% end %>