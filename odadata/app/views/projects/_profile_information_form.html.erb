<script language="javascript">
	// TODO: Create datepicker css class and move this into application.js
  $(document).ready(
  	function(){

		$.datepicker.setDefaults({
            showOn: "button", 
            buttonImage: "/images/datepicker.png", 
            buttonImageOnly: true,
            dateFormat: 'yy-mm-dd'
        });

        $('#project_end').datepicker();
        $('#project_start').datepicker();
	}
  );
</script>


<% f.field_set do %>
	<li><%= f.text_field :title, :size => 80, :class => "large" %></li>
	<li><%= f.text_area  :description, :rows => 10, :class => "large" %></li>

	<li class="fifty"><%= f.text_field :donor_project_number %></li>
	<li class="fifty"><%= f.text_field :oecd_number %></li>
	<li><%= f.text_field :recipient_country_budget_nr, :class => "large" %></li>
	
	<li><%= f.collection_select :donor_agency_id, @project.donor.agencies, "id", "name", 
				{ :required => true, :prompt => I18n.t('options.prompt') }, :class => "large" %></li>
	
	<li><%= f.collection_select :country_strategy_id, @project.donor.country_strategies, "id", "strategy_number",
	 		{ :prompt => I18n.t('options.country_strategy_unavailable') }, :class => "large" %></li>
	<li><%= f.select :prj_status, Project::STATUS_OPTIONS, 
			:include_blank => I18n.t('options.prompt'), :translate => true %></li>

    
	<li class="fifty">
    	<%= f.text_field :start, :readonly =>true %>
    	<%= error_message_on(:project, :start, "","", "error_message" ) %>
    </li>

	<li class="fifty">
    	<%= f.text_field :end, :readonly =>true  %>
    	<%= error_message_on(:project, :end, "","", "error_message" ) %>
    </li>

<% end %>
