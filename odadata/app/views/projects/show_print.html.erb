<%= currency_selector %>

<center>
<% odatab_for :project, :html => { :class => "admin" } do |r| %>
	<%= r.title_row "Project Details" %>
	
	<% r.labeled_row :donor, :label => "Agency Name", :glossary => true do %>
		<%= @project.donor.name %>
	<% end %>
	
	<% r.labeled_row :donor_agency, :label => "Donor Agency", :glossary => true do %>
		<%= @project.donor_agency.name %>
	<% end %>
	
	<%= r.text_field :donor_project_number, :label => "Donor Project Number", :glossary => true %>
	
	<%= r.text_field :title, :label => "Project Title", :glossary => true %>
	
	<%= r.text_field :fmt_description, :label => "Project Description", :glossary => "description" %>
	
	<% r.labeled_row :country_strategy, :label => "Country Strategy", :glossary => true do %>
		<% if @project.country_strategy.blank? %> 
			Not linked to any country strategy
		<% else %>       
			<%= link_to(@project.country_strategy.strategy_number, {:controller => "country_strategy", :action => "show", :id => @project.country_strategy.id}) %>
		<% end %>
	<% end %>
	
	<% r.labeled_row :officer_responsible, :label => "Officer Responsible", :glossary => true do %>
		<%= @project.officer_responsible.formatted_address %>
	<% end %>
	
	<% r.labeled_row :start, :label => "Start Date", :glossary => true do %>
		<%= @project.start.strftime("%d-%b-%Y") %>
	<% end %>
	
	<% r.labeled_row :end, :label => "End Date" do %>
		<%= @project.end.strftime("%d-%b-%Y") %>
	<% end %>
	
	<%= r.text_field :oecd_number, :label => "OECD Number", :glossary => true %>
	
	<%= r.text_field :recipient_code, :label => "Recipient Code", :glossary => true %>
	
	<%= r.text_field :region_code, :label => "Region Code", :glossary => true %>
	
	<%= r.text_field :income_code, :label => "Income Code", :glossary => true %>
	
	<%= r.text_field :sector, :label => "DAC/CRS Sector", :glossary => "dac_crs_sector" %>
	
	<%= r.text_field :comments, :glossary => "comment", :glossary => true %>
	
	<%= r.option_field :status, Project::STATUS_OPTIONS, :label => "Project Status", :glossary => true %>
	
	<%= r.text_field :recipient_country_budget_nr, :label => "Recipient Country Budget Number", :glossary => "recipient_country_budget_number" %>
	
	<% r.labeled_row :project_internet_link, :label => "Project Internet Link" do %>
		<%= link_to(@project.website, @project.website.to_url, :popup => ['Project Link', 'width=800,height=600,scrollbars=yes']) %>
	<% end %>
	
	<%= r.option_field :type_of_aid, Project::TYPE_OF_AID_OPTIONS, :label => "Type of Aid", :glossary => true %>
	
	<%= r.option_field :grant_loan, Project::GRANT_LOAN_OPTIONS, :label => "Grant / Loan", :glossary => true %>
	
	<%= r.option_field :nation_regional, Project::NATIONAL_REGIONAL_OPTIONS, 
		:label => "National / Regional", :glossary => "national_regional_program" %>
	
	<%= r.option_field :type_of_implementation, Project::IMPLEMENTATION_TYPES, :label => "Type of Implementation", :glossary => true %>
	
	<% r.labeled_row :government_counterpart, :label => "Government Counterpart", :glossary => true do %>
		<% if @project.government_counterpart.blank? %>
			&nbsp;
		<% else %>
			<%= @project.government_counterpart.name %>
		<% end %>
	<% end %>
	
	<% r.labeled_row :markers, :label => "Markers", :glossary => true do %>
		<%= render :partial => 'marker_information' %>
	<% end %>
	
	<% r.labeled_row :mdg, :label => "MDG Goals", :glossary => true do %>
		<%= format_as_html_table(@project.mdgs.map {|m| [m.name, m.description]}, :per_row => 3) %>
	<% end %>
	
	<% r.labeled_row :financial_information, :label => "Financial Information", :glossary => true do %>
		<%= render :partial => 'financial_information' %>
	<% end %>
	
	<% if @project.has_cofundings %>
		<% r.labeled_row :cofunding, :label => "Cofundings", :glossary => true do %>
			<%= render :partial => 'cofunding_information', :collection => @project.cofundings %>
		<% end %>
	<% end %>
	
	<% r.labeled_row :focal_region, :label => "Focal #{GeoLevel1::CAPTION.pluralize}", :glossary => true do %>
		<%= render :partial => "focal_regions" %>
	<% end %>
	
	<% r.labeled_row :implementing_agency, :label => "Implementing Agencies", :glossary => true do %>
		<% @implementing_agencies.each do |s| %>
			<%= s.name %><br>
		<% end %>
	<% end %>
	
	<% r.labeled_row :last_updated, :label => "Last Updated", :glossary => true do %>
		<%= @project.updated_at.strftime("%d-%b-%Y") %>
	<% end %>
<% end %>
</center>