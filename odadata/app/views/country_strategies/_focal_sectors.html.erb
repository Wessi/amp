
<% unless @country_strategy.nil? %>
  <% @country_strategy.sector_details.sort.each do |details| %>
      <div style="margin-bottom: 10px; margin-top: 10px; border: 1px solid #999">
          <%= details.focal_sector.andand.name_with_code %><br />
          &nbsp;&nbsp;<%= t('.amount') %>: <%= null_to_na(details.amount) %>
          <% if details.provinces.empty? %>
          <br />&nbsp;&nbsp;<%= t('.national_sector') %>.<br />
          <% else %>
              <div>
              &nbsp;&nbsp;<%= t('.focal_regions') %>:<br />
              <% details.provinces.each do |province| %>
                  &nbsp;&nbsp;&nbsp;&nbsp;-&nbsp;<%= province.name %><br />
              <% end %>
              </div>
          <% end %>
      </div>
  <% end%>
<% end %>