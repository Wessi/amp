<h2><%= header t('.title') %></h2>

<table>
	<tr>
		<th><%= t('.donor') %></th>
		<td width="50%"><%= current_donor.name %></td>
	</tr>
	<tr>
		<th><%= t('.year') %></th>
		<td><%= select :consistency, :year, 
				(Time.now.year-5..Time.now.year).to_a.reverse.collect { |y| [y, y] }, {},
				:onchange => "window.location = '#{request.path}?year=' + this.value" %></td>			
	</tr>
	<tr>
		<th><%= t('.total_commitments') %></th>
		<td class="field_justify"><%= @consistency.total_commitments %></td>			
	</tr>
	<tr>
		<th><%= t('.total_payments') %></th>
		<td class="field_justify"><%= @consistency.total_payments %></td>			
	</tr>
	
	<% AidModality.all.each do |toa| %>
		<tr>
			<th><%= t('.toa_payments' :type => toa.name) -%></th>
			<td><%= @consistency.payments_by_aid_modality(toa.id) %></td>			
		</tr>
	<% end %>
</table>

