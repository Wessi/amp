<style type="text/css" media="screen">
	#leftColumn {
		width: 160px;
		float: left;
		text-align: center;
	}

	#centerColumn {
		width: 560px;	
		float: left;
	}

	#rightColumn {
		width: 160px;	
		float: left;
		text-align: center;
	}
</style>

<div id="leftColumn">
	<a href="/odamap" target="_blank"><IMG SRC="/images/Nicaragua.jpg" width="150" height="100" border="1" alt="ODAmap" /></a>
	<%=t 'map_image_link' %> 
</div>

<div id="centerColumn">
	<div id="shortIntro">
		<%=t 'introduction_short' %>
		<p align="right">
			<%= link_to_function t('read_more'), nil do |page| 
				page[:shortIntro].hide
				page[:longIntro].show 
			end %>
		</p>
	</div>
	
	<div id="longIntro" style="display: none">
		<%=t 'introduction_long' %>
		<p align="right">
			<%= link_to_function t('back'), nil do |page| 
				page[:longIntro].hide
				page[:shortIntro].show 
			end %>
		</p>
	</div>
</div>

<div id="rightColumn">
	<a href="/resources/nicaragua_bluebook_2007_<%= I18n.locale %>.pdf"><IMG SRC="/images/EUBluebookCoverNicaragua.jpg" width="150" height="100" border="1" alt="EU BlueBook Cover"></a>
	<%=t 'bluebook_image_link' %>
</div>
