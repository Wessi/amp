<?xml version="1.0" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
	  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
	  <title><%= render_page_title %></title>
	
	  <%= javascript_include_tag(:defaults, 'swfobject', 'jtip', 'jquery_expander', 'jquery_template', 'behavior/menu', :cache => false) %>
	  <%= stylesheet_link_tag('style', 'jtip', :media => :all, :cache => false) %>
	  <%= stylesheet_link_tag('print', :media => :print, :cache => false) %>

	  <%= yield :head %>
	</head>
	
	<body id="body" class="<%= current_user.andand.layout || 'public' %>">
	<div id="generalContainer" style="border-left:1px solid #CECECE;border-right:1px solid #CECECE;">
		<div id="header" style="width:900px;">
			<!-- START Flash Objects -->

			<div style="height:80px;">
				<div style="float:left;height:inherit;width:500px;text-align:left;padding:6px 6px 6px 6px;">
					<img src="/images/ODAnicLogo.gif" alt="ODAnic" width="236" height="80" border="0" style="float:left" />
                    <p style="color:#1c4683;font-weight:bold;">Official Development Assistance <br/> to Nicaragua Database</p>
				</div>
                <div style="float:right;height:inherit;width:370px; text-align:right; vertical-align:middle;padding-right:10px;">
                <p style="color:#1c4683;font-weight:bold;">
                <%= current_user.andand.name %><br>
                </p>
                <p style="color:#1c4683;font-weight:bold;">
                <img src="/images/<%=current_user.andand.donor.andand.code || 'none' %>_flag_small.gif" align="middle" hspace="8" style="float:left"/>
				<%= current_user.andand.donor.andand.name || current_user.andand.role.andand.description %><br>
                </p>
				</div>
			</div>
			<!-- END Flash Objects -->
			<div style="float:left;width:900px;">
			<!-- START Render User Navigation AKA Menu-->
			<%= render_user_navigation %>
			<!-- END Render User Navigation -->
            </div>

			<!-- START News section -->
            <div style="text-align:center;padding:2px;">
			<marquee DIRECTION="LEFT" BEHAVIOR="SCROLL" SCROLLAMOUNT="7" SCROLLDELAY="200" TRUESPEED height="20" width="700">
				<%= Prefs.scroll_bar_mfp %>
			</marquee>
            </div>
			<!-- END News section -->

			<!-- START Flash Messages section -->
			<%= flash_messages %>
			<!-- END Flash Messages section -->
		</div>
		<div id="content">
		
			<!-- START yield :header section -->
			<%= yield :header %>
			<!-- END yield :header section -->

			<!-- START "yield" section -->
			<%= yield  %>
			<!-- END "yield" section -->
		</div>
		
		<!-- START footer section -->
		<%= render :partial => 'layouts/footer' %>
		<!-- END footer section -->
	</div>
	</body>
</html>
