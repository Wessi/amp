<?xml version="1.0" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
		<title><%= render_page_title %></title>
    
		
		<%= stylesheet_link_tag(
				'layout', 'forms', "layouts/#{current_user.andand.layout || 'public'}",
				:media => :all, :cache => false) %>
		<%# TODO: Set cache back to styles upon production deployment!!! %>
		<%= stylesheet_link_tag('print', :media => :print, :cache => false) %>
		<%= javascript_include_tag('swfobject', 'jquery-1.4.2.min', 'jquery-ui-1.8.custom.min', 'jquery.livequery.min', 'behavior/menu') %>
    	
		<%= yield :head %>
	</head>
	
	<body id="body">
		<div align="center">
			<div id="generalContainer">
				<div id="header">
					<%= render_header_content_for_role(current_user.andand.role_title) %>
					<!-- START Flash Messages section -->
					<%= flash_messages %>
					<!-- END Flash Messages section -->
				</div>
			
				<div id="content">					
					<!-- START yield :header section -->
					<%= yield :header %>
					<!-- END yield :header section -->
    		
					<!-- START "yield" section -->
					<%= yield  %>
					<!-- END "yield" section -->
				</div>
				
				<!-- START footer section -->
				<%= render :partial => 'layouts/footer' %>
				<!-- END footer section -->
			</div>
  	</div>

		<%= yield :body %>
	</body>
</html>
