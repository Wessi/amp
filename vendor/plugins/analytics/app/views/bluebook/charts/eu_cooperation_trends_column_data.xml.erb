<?xml version="1.0" encoding="UTF-8"?>
<chart>
	<series>
		<% x=-1 %>
		<% @donor_payments.each_key do |donor| %>
			<value xid="<%= x+=1.to_i %>"><%= donor %></value>
		<% end %>

	</series>
	<graphs>
	
		<graph gid="1">
			<% x=-1 %>
			<% @donor_payments.each_value do |payments| %>
				<value xid="<%= x+=1.to_i %>" color="#0000FF"><%= (payments.to_f/1000000).round(2) %></value>
			<% end %>
		</graph>
		
		<graph gid="2">
			<% x=-1 %>
			<% @donor_payments_forecast.each_value do |payments| %>
				<value xid="<%= x+=1.to_i %>" color="00FFFF"><%= (payments.to_f/1000000).round(2) %></value>
			<% end %>
		</graph>
	
	</graphs>

</chart>